{% comment %}
  AI Assistant Snippet for duso_ecom Shopify Theme
{% endcomment %}

{% if settings.ai_assistant_enabled %}
<style>
  .ai-assistant {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
    z-index: 1000;
  }

  .ai-assistant__toggle {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 20px rgba(249, 115, 22, 0.4);
    transition: all 0.3s ease;
  }

  .ai-assistant__toggle:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 25px rgba(249, 115, 22, 0.5);
  }

  .ai-assistant__toggle svg {
    width: 24px;
    height: 24px;
    color: white;
  }

  .ai-assistant__toggle-close {
    display: none;
  }

  .ai-assistant.is-open .ai-assistant__toggle-open {
    display: none;
  }

  .ai-assistant.is-open .ai-assistant__toggle-close {
    display: block;
  }

  .ai-assistant__window {
    position: absolute;
    bottom: 70px;
    right: 0;
    width: 380px;
    max-width: calc(100vw - 2rem);
    background: rgba(17, 24, 39, 0.95);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.5rem;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px) scale(0.95);
    transition: all 0.3s ease;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
  }

  .ai-assistant.is-open .ai-assistant__window {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  .ai-assistant__header {
    padding: 1rem 1.25rem;
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.1), rgba(16, 185, 129, 0.1));
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .ai-assistant__avatar {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-assistant__avatar svg {
    width: 20px;
    height: 20px;
    color: white;
  }

  .ai-assistant__info {
    flex: 1;
  }

  .ai-assistant__name {
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .ai-assistant__status {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--color-secondary);
    font-size: 0.75rem;
  }

  .ai-assistant__status-dot {
    width: 6px;
    height: 6px;
    background: var(--color-secondary);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  .ai-assistant__messages {
    height: 350px;
    overflow-y: auto;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .ai-assistant__message {
    max-width: 85%;
    padding: 0.75rem 1rem;
    border-radius: 1rem;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .ai-assistant__message--bot {
    background: rgba(255, 255, 255, 0.05);
    color: white;
    border-bottom-left-radius: 0.25rem;
    align-self: flex-start;
  }

  .ai-assistant__message--user {
    background: linear-gradient(135deg, var(--color-primary), #ea580c);
    color: white;
    border-bottom-right-radius: 0.25rem;
    align-self: flex-end;
  }

  .ai-assistant__input-area {
    padding: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    gap: 0.75rem;
  }

  .ai-assistant__input {
    flex: 1;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.75rem;
    color: white;
    font-size: 0.875rem;
    outline: none;
    transition: border-color 0.3s ease;
  }

  .ai-assistant__input:focus {
    border-color: var(--color-primary);
  }

  .ai-assistant__input::placeholder {
    color: var(--color-text-light);
  }

  .ai-assistant__send {
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, var(--color-primary), #ea580c);
    border: none;
    border-radius: 0.75rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-assistant__send:hover {
    transform: scale(1.05);
  }

  .ai-assistant__send svg {
    width: 18px;
    height: 18px;
    color: white;
  }

  .ai-assistant__typing {
    display: none;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 1rem;
    border-bottom-left-radius: 0.25rem;
    max-width: 100px;
  }

  .ai-assistant__typing.is-visible {
    display: flex;
  }

  .ai-assistant__typing-dot {
    width: 6px;
    height: 6px;
    background: var(--color-text-light);
    border-radius: 50%;
    animation: typing 1.4s infinite ease-in-out;
  }

  .ai-assistant__typing-dot:nth-child(1) {
    animation-delay: 0s;
  }

  .ai-assistant__typing-dot:nth-child(2) {
    animation-delay: 0.2s;
  }

  .ai-assistant__typing-dot:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes typing {
    0%, 60%, 100% {
      transform: translateY(0);
    }
    30% {
      transform: translateY(-5px);
    }
  }
</style>

<div class="ai-assistant" data-ai-assistant>
  <button class="ai-assistant__toggle" data-ai-toggle>
    <svg class="ai-assistant__toggle-open" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
    </svg>
    <svg class="ai-assistant__toggle-close" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>

  <div class="ai-assistant__window">
    <div class="ai-assistant__header">
      <div class="ai-assistant__avatar">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 2a2 2 0 0 1 2 2c0 .74-.4 1.39-1 1.73V7h1a7 7 0 0 1 7 7h1a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v1a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-1H2a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h1a7 7 0 0 1 7-7h1V5.73c-.6-.34-1-.99-1-1.73a2 2 0 0 1 2-2z"></path>
          <circle cx="9" cy="13" r="1"></circle>
          <circle cx="15" cy="13" r="1"></circle>
          <path d="M9 17h6"></path>
        </svg>
      </div>
      <div class="ai-assistant__info">
        <div class="ai-assistant__name">AI Консультант</div>
        <div class="ai-assistant__status">
          <span class="ai-assistant__status-dot"></span>
          Онлайн
        </div>
      </div>
    </div>

    <div class="ai-assistant__messages" data-ai-messages>
      <div class="ai-assistant__message ai-assistant__message--bot">
        {{ settings.ai_assistant_greeting }}
      </div>
    </div>

    <div class="ai-assistant__input-area">
      <input 
        type="text" 
        class="ai-assistant__input" 
        placeholder="Напишите сообщение..." 
        data-ai-input
      >
      <button class="ai-assistant__send" data-ai-send>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="22" y1="2" x2="11" y2="13"></line>
          <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
        </svg>
      </button>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const assistant = document.querySelector('[data-ai-assistant]');
  const toggle = document.querySelector('[data-ai-toggle]');
  const messages = document.querySelector('[data-ai-messages]');
  const input = document.querySelector('[data-ai-input]');
  const send = document.querySelector('[data-ai-send]');

  if (!assistant || !toggle) return;

  toggle.addEventListener('click', function() {
    assistant.classList.toggle('is-open');
    if (assistant.classList.contains('is-open')) {
      input?.focus();
    }
  });

  function addMessage(text, isUser = false) {
    const message = document.createElement('div');
    message.className = `ai-assistant__message ai-assistant__message--${isUser ? 'user' : 'bot'}`;
    message.textContent = text;
    messages.appendChild(message);
    messages.scrollTop = messages.scrollHeight;
  }

  function handleSend() {
    const text = input.value.trim();
    if (!text) return;

    addMessage(text, true);
    input.value = '';

    // Simulate AI response
    setTimeout(() => {
      const responses = [
        'Спасибо за ваш вопрос! Наш менеджер свяжется с вами в ближайшее время.',
        'Отличный выбор! Мы специализируемся на Shopify магазинах уже более 8 лет.',
        'Для получения подробной консультации, пожалуйста, оставьте заявку на странице контактов.',
        'Стоимость разработки зависит от сложности проекта. Базовые магазины от $2000.'
      ];
      const response = responses[Math.floor(Math.random() * responses.length)];
      addMessage(response);
    }, 1000);
  }

  send?.addEventListener('click', handleSend);
  input?.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') handleSend();
  });
});
</script>
{% endif %}
