{% comment %}
  Awards Section - Exact copy from React AwardsSection.jsx
{% endcomment %}

<section class="py-24 relative z-10">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="text-emerald-500 text-sm font-medium tracking-wider uppercase mb-4 block">
        {{ 'awards.section_title' | t }}
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
        {{ 'awards.title_1' | t }} <span class="text-orange-500 text-glow-orange">{{ 'awards.title_highlight' | t }}</span>
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        {{ 'awards.subtitle' | t }}
      </p>
    </div>

    <!-- Main Grid -->
    <div class="grid md:grid-cols-2 gap-8 mb-12">
      <!-- Shopify Partner Card -->
      <div class="floating-card rounded-2xl p-8 border-2 border-emerald-500/30 hover:border-emerald-500/50 transition-all duration-300">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-16 h-16 rounded-xl bg-emerald-500/10 flex items-center justify-center">
            <i data-lucide="shield-check" class="w-8 h-8 text-emerald-500"></i>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-white mb-1">{{ 'awards.shopify_experts' | t }}</h3>
            <span class="text-emerald-500 text-sm font-medium">Shopify Plus Partner</span>
          </div>
        </div>
        <p class="text-gray-400 leading-relaxed mb-6">
          {{ 'awards.shopify_desc' | t }}
        </p>
        <div class="flex gap-4">
          <div class="glass rounded-lg px-4 py-2 text-center">
            <div class="text-emerald-500 font-bold text-lg">5.0</div>
            <div class="text-gray-500 text-xs">Рейтинг</div>
          </div>
          <div class="glass rounded-lg px-4 py-2 text-center">
            <div class="text-emerald-500 font-bold text-lg">200+</div>
            <div class="text-gray-500 text-xs">Отзывов</div>
          </div>
          <div class="glass rounded-lg px-4 py-2 text-center">
            <div class="text-emerald-500 font-bold text-lg">2015</div>
            <div class="text-gray-500 text-xs">С нами</div>
          </div>
        </div>
      </div>

      <!-- Clutch Card -->
      <div class="floating-card rounded-2xl p-8 border-2 border-orange-500/30 hover:border-orange-500/50 transition-all duration-300">
        <div class="flex items-start gap-4 mb-6">
          <div class="w-16 h-16 rounded-xl bg-orange-500/10 flex items-center justify-center">
            <i data-lucide="trophy" class="w-8 h-8 text-orange-500"></i>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-white mb-1">{{ 'awards.clutch_title' | t }}</h3>
            <span class="text-orange-500 text-sm font-medium">{{ 'awards.clutch_badge' | t }}</span>
          </div>
        </div>
        <p class="text-gray-400 leading-relaxed mb-6">
          {{ 'awards.clutch_desc' | t }}
        </p>
        <div class="flex gap-4">
          <div class="glass rounded-lg px-4 py-2 text-center">
            <div class="text-orange-500 font-bold text-lg">4.9</div>
            <div class="text-gray-500 text-xs">Рейтинг</div>
          </div>
          <div class="glass rounded-lg px-4 py-2 text-center">
            <div class="text-orange-500 font-bold text-lg">325+</div>
            <div class="text-gray-500 text-xs">Отзывов</div>
          </div>
          <div class="glass rounded-lg px-4 py-2 text-center">
            <div class="text-orange-500 font-bold text-lg">Top 1%</div>
            <div class="text-gray-500 text-xs">Мир</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Row -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="glass rounded-xl p-6 text-center hover:bg-white/5 transition-all">
        <div class="text-3xl font-bold text-orange-500 mb-1">6500+</div>
        <div class="text-gray-400 text-sm">{{ 'awards.stat_projects' | t }}</div>
      </div>
      <div class="glass rounded-xl p-6 text-center hover:bg-white/5 transition-all">
        <div class="text-3xl font-bold text-emerald-500 mb-1">98%</div>
        <div class="text-gray-400 text-sm">{{ 'awards.stat_satisfaction' | t }}</div>
      </div>
      <div class="glass rounded-xl p-6 text-center hover:bg-white/5 transition-all">
        <div class="text-3xl font-bold text-orange-500 mb-1">10+</div>
        <div class="text-gray-400 text-sm">{{ 'awards.stat_experience' | t }}</div>
      </div>
      <div class="glass rounded-xl p-6 text-center hover:bg-white/5 transition-all">
        <div class="text-3xl font-bold text-emerald-500 mb-1">50+</div>
        <div class="text-gray-400 text-sm">{{ 'awards.stat_experts' | t }}</div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a
        href="/pages/about"
        class="inline-flex items-center gap-2 text-orange-500 hover:text-white font-medium transition-colors duration-300 group"
      >
        <span class="neon-underline">{{ 'awards.learn_more' | t }}</span>
        <i data-lucide="arrow-right" class="w-5 h-5 group-hover:translate-x-2 transition-transform duration-300"></i>
      </a>
    </div>
  </div>
</section>

<style>
  .neon-underline {
    position: relative;
  }
  .neon-underline::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, #f97316, #10b981);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }
  .group:hover .neon-underline::after {
    transform: scaleX(1);
    transform-origin: left;
  }
</style>

