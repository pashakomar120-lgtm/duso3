{% comment %}
  CTA Section
{% endcomment %}

<style>
  .cta-section {
    padding: 5rem 0;
  }

  .cta-section__container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 640px) {
    .cta-section__container {
      padding: 0 1.5rem;
    }
  }

  .cta-section__card {
    background: rgba(17, 24, 39, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 2rem;
    padding: 2.5rem 1.5rem;
    text-align: center;
  }

  @media (min-width: 640px) {
    .cta-section__card {
      padding: 4rem 3rem;
    }
  }

  .cta-section__title {
    font-size: 1.75rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .cta-section__title {
      font-size: 2.5rem;
    }
  }

  .cta-section__text {
    color: var(--color-text);
    font-size: 1rem;
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 640px) {
    .cta-section__text {
      font-size: 1.125rem;
    }
  }

  .cta-section__flags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .cta-section__flag {
    width: 36px;
    height: 27px;
    object-fit: cover;
    border-radius: 4px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.3);
    transition: transform 0.3s ease;
  }

  @media (min-width: 640px) {
    .cta-section__flag {
      width: 48px;
      height: 36px;
    }
  }

  .cta-section__flag:hover {
    transform: scale(1.1);
  }

  .cta-section__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--color-primary), #ea580c);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(249, 115, 22, 0.3);
  }

  @media (min-width: 640px) {
    .cta-section__btn {
      padding: 1.25rem 2.5rem;
      font-size: 1.125rem;
    }
  }

  .cta-section__btn:hover {
    transform: scale(1.02);
    box-shadow: 0 6px 25px rgba(249, 115, 22, 0.4);
  }

  .cta-section__btn svg {
    width: 20px;
    height: 20px;
  }
</style>

<section class="cta-section">
  <div class="cta-section__container">
    <div class="cta-section__card">
      <h2 class="cta-section__title">{{ section.settings.title }}</h2>
      <p class="cta-section__text">{{ section.settings.text }}</p>
      
      <div class="cta-section__flags">
        <img src="https://flagcdn.com/w80/ru.png" alt="Россия" class="cta-section__flag" loading="lazy">
        <img src="https://flagcdn.com/w80/ua.png" alt="Украина" class="cta-section__flag" loading="lazy">
        <img src="https://flagcdn.com/w80/kz.png" alt="Казахстан" class="cta-section__flag" loading="lazy">
        <img src="https://flagcdn.com/w80/by.png" alt="Беларусь" class="cta-section__flag" loading="lazy">
        <img src="https://flagcdn.com/w80/uz.png" alt="Узбекистан" class="cta-section__flag" loading="lazy">
        <img src="https://flagcdn.com/w80/az.png" alt="Азербайджан" class="cta-section__flag" loading="lazy">
        <img src="https://flagcdn.com/w80/ge.png" alt="Грузия" class="cta-section__flag" loading="lazy">
        <img src="https://flagcdn.com/w80/am.png" alt="Армения" class="cta-section__flag" loading="lazy">
      </div>
      
      <a href="{{ section.settings.button_link }}" class="cta-section__btn">
        {{ section.settings.button_text }}
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CTA секция",
  "class": "section-cta",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Готовы к росту?",
      "label": "Заголовок"
    },
    {
      "type": "textarea",
      "id": "text",
      "default": "Ваш бизнес в любой стране СНГ? Мы знаем локальный рынок и поможем масштабироваться!",
      "label": "Текст"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Обсудить проект",
      "label": "Текст кнопки"
    },
    {
      "type": "url",
      "id": "button_link",
      "default": "/pages/contact",
      "label": "Ссылка кнопки"
    }
  ],
  "presets": [
    {
      "name": "CTA секция"
    }
  ]
}
{% endschema %}
