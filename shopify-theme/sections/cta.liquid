{% comment %} CTA Section - Exact match to React CTASection.jsx {% endcomment %}

<section class="cta-section py-24 relative z-10">
  <div class="container">
    <div class="cta-wrapper relative rounded-3xl overflow-hidden">
      
      {% comment %} Animated border {% endcomment %}
      <div class="cta-border"></div>
      <div class="cta-bg"></div>
      
      {% comment %} Decorative elements {% endcomment %}
      <div class="cta-glow-1"></div>
      <div class="cta-glow-2"></div>
      <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 16rem; height: 16rem; background: rgba(249, 115, 22, 0.1); border-radius: 9999px; filter: blur(2rem);"></div>
      
      {% comment %} Floating icons {% endcomment %}
      <div class="glass rounded-xl float" style="position: absolute; top: 2.5rem; left: 2.5rem; width: 3rem; height: 3rem; display: flex; align-items: center; justify-content: center; opacity: 0.5;">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#f97316" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/><path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/><path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/><path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/></svg>
      </div>
      <div class="glass rounded-xl float-slow" style="position: absolute; top: 2.5rem; right: 2.5rem; width: 3rem; height: 3rem; display: flex; align-items: center; justify-content: center; opacity: 0.5; animation-delay: 1s;">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
      </div>
      <div class="glass rounded-xl float-fast" style="position: absolute; bottom: 2.5rem; left: 25%; width: 3rem; height: 3rem; display: flex; align-items: center; justify-content: center; opacity: 0.5;">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#f97316" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
      </div>
      
      {% comment %} Content {% endcomment %}
      <div class="cta-content">
        {% comment %} Badge {% endcomment %}
        <div class="section-badge glass" style="display: inline-flex; border-color: rgba(16, 185, 129, 0.3); margin-bottom: 2rem;">
          <span class="section-badge-dot"></span>
          <span class="section-badge-text">{{ 'cta.badge' | t }}</span>
        </div>
        
        <h2 class="cta-title">
          {{ 'cta.title_1' | t }}
          <span class="text-orange-500 text-glow-orange">{{ 'cta.title_2' | t }}</span>
        </h2>
        <h3 class="cta-subtitle">
          {{ 'cta.subtitle_1' | t }} <span class="text-emerald-500 font-bold text-glow-emerald">duso_ecom</span> {{ 'cta.subtitle_2' | t }}
        </h3>
        <p class="cta-description">
          {{ 'cta.description' | t }}
        </p>
        
        <div class="cta-buttons">
          <a href="/pages/contact" class="btn btn-primary btn-glow cta-btn-primary" data-testid="cta-main-button">
            {{ 'general.discuss_project' | t }}
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
          </a>
          <a href="/pages/portfolio" class="btn cta-btn-secondary glass" data-testid="cta-secondary-button">
            {{ 'general.view_cases' | t }}
          </a>
        </div>
        
        {% comment %} Trust indicators {% endcomment %}
        <div class="cta-stats">
          <div class="cta-stat">
            <div class="cta-stat-value">{{ 'cta.stats.stores' | t }}</div>
            <div class="cta-stat-label">{{ 'cta.stats.stores_label' | t }}</div>
          </div>
          <div class="cta-stat-divider"></div>
          <div class="cta-stat">
            <div class="cta-stat-value">{{ 'cta.stats.satisfaction' | t }}</div>
            <div class="cta-stat-label">{{ 'cta.stats.satisfaction_label' | t }}</div>
          </div>
          <div class="cta-stat-divider"></div>
          <div class="cta-stat">
            <div class="cta-stat-value">{{ 'cta.stats.support' | t }}</div>
            <div class="cta-stat-label">{{ 'cta.stats.support_label' | t }}</div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CTA",
  "settings": []
}
{% endschema %}
