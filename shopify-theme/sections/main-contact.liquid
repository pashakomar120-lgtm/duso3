{% comment %}
  Contact Page Section
{% endcomment %}

<style>
  .contact {
    min-height: 100vh;
    padding: 8rem 0 4rem;
  }

  @media (min-width: 640px) {
    .contact {
      padding: 10rem 0 6rem;
    }
  }

  .contact__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 640px) {
    .contact__container {
      padding: 0 1.5rem;
    }
  }

  .contact__header {
    max-width: 600px;
    margin-bottom: 3rem;
  }

  .contact__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(249, 115, 22, 0.2);
    border-radius: 9999px;
    margin-bottom: 1.5rem;
  }

  .contact__badge-icon {
    width: 16px;
    height: 16px;
    color: var(--color-primary);
  }

  .contact__badge-text {
    color: var(--color-primary);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .contact__title {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
  }

  @media (min-width: 640px) {
    .contact__title {
      font-size: 3rem;
    }
  }

  .contact__title-accent {
    color: var(--color-secondary);
    text-shadow: 0 0 30px rgba(16, 185, 129, 0.5);
  }

  .contact__description {
    color: var(--color-text);
    font-size: 1rem;
    line-height: 1.7;
  }

  @media (min-width: 640px) {
    .contact__description {
      font-size: 1.25rem;
    }
  }

  .contact__grid {
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    .contact__grid {
      grid-template-columns: 1fr 2fr;
      gap: 3rem;
    }
  }

  .contact__info {
    background: rgba(17, 24, 39, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.5rem;
    padding: 1.5rem;
  }

  @media (min-width: 640px) {
    .contact__info {
      padding: 2rem;
    }
  }

  .contact__info-title {
    color: white;
    font-weight: 600;
    font-size: 1.125rem;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .contact__info-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .contact__info-icon {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .contact__info-icon svg {
    width: 18px;
    height: 18px;
    color: var(--color-primary);
  }

  .contact__info-label {
    color: var(--color-text-light);
    font-size: 0.75rem;
    margin-bottom: 0.25rem;
  }

  .contact__info-value {
    color: white;
    font-weight: 500;
  }

  .contact__qr {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .contact__qr-title {
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .contact__qr-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(249, 115, 22, 0.2);
    border-radius: 0.75rem;
  }

  .contact__qr-img {
    width: 100px;
    height: 100px;
    border-radius: 0.5rem;
  }

  .contact__qr-text {
    color: var(--color-text);
    font-size: 0.75rem;
    text-align: center;
  }

  .contact__form {
    background: rgba(17, 24, 39, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.5rem;
    padding: 1.5rem;
  }

  @media (min-width: 640px) {
    .contact__form {
      padding: 2rem;
    }
  }

  .contact__form-title {
    color: white;
    font-weight: 600;
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .contact__form-grid {
    display: grid;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .contact__form-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .contact__form-group {
    display: flex;
    flex-direction: column;
  }

  .contact__form-group--full {
    grid-column: 1 / -1;
  }

  .contact__form-label {
    color: var(--color-text);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .contact__form-input,
  .contact__form-select,
  .contact__form-textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.75rem;
    color: white;
    font-size: 0.875rem;
    outline: none;
    transition: border-color 0.3s ease;
  }

  .contact__form-input:focus,
  .contact__form-select:focus,
  .contact__form-textarea:focus {
    border-color: var(--color-primary);
  }

  .contact__form-input::placeholder,
  .contact__form-textarea::placeholder {
    color: var(--color-text-light);
  }

  .contact__form-select option {
    background: #111827;
  }

  .contact__form-textarea {
    min-height: 120px;
    resize: vertical;
  }

  .contact__form-submit {
    width: 100%;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--color-primary), #ea580c);
    border: none;
    border-radius: 0.75rem;
    color: white;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(249, 115, 22, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .contact__form-submit:hover {
    transform: scale(1.02);
    box-shadow: 0 6px 25px rgba(249, 115, 22, 0.4);
  }

  .contact__form-submit svg {
    width: 20px;
    height: 20px;
  }
</style>

<section class="contact">
  <div class="contact__container">
    <!-- Header -->
    <div class="contact__header">
      <div class="contact__badge">
        <svg class="contact__badge-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
        </svg>
        <span class="contact__badge-text">Бесплатная консультация</span>
      </div>
      <h1 class="contact__title">
        Давайте <span class="contact__title-accent">поговорим</span>
      </h1>
      <p class="contact__description">
        Расскажите о своём проекте — мы подберём лучшее решение для вашего бизнеса по всему СНГ.
      </p>
    </div>

    <div class="contact__grid">
      <!-- Info -->
      <div class="contact__info">
        <h3 class="contact__info-title">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          Контактная информация
        </h3>

        <div class="contact__info-item">
          <div class="contact__info-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <div>
            <div class="contact__info-label">Email</div>
            <a href="mailto:{{ section.settings.email }}" class="contact__info-value">
              {{ section.settings.email }}
            </a>
          </div>
        </div>

        <div class="contact__info-item">
          <div class="contact__info-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </div>
          <div>
            <div class="contact__info-label">Телефон</div>
            <a href="tel:{{ section.settings.phone | remove: ' ' }}" class="contact__info-value">
              {{ section.settings.phone }}
            </a>
          </div>
        </div>

        <!-- QR Code -->
        <div class="contact__qr">
          <h4 class="contact__qr-title">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
            Быстрая связь
          </h4>
          <div class="contact__qr-box">
            <img 
              src="https://customer-assets.emergentagent.com/job_responsive-admin-30/artifacts/z3erb60m_image.png"
              alt="QR код Telegram"
              class="contact__qr-img"
              loading="lazy"
            >
            <p class="contact__qr-text">Сканируйте для связи в Telegram</p>
          </div>
        </div>
      </div>

      <!-- Form -->
      <div class="contact__form">
        <h3 class="contact__form-title">Получить консультацию</h3>
        
        {% form 'contact', class: 'contact__form-inner' %}
          <div class="contact__form-grid">
            <div class="contact__form-group">
              <label class="contact__form-label" for="contact-name">Имя *</label>
              <input 
                type="text" 
                id="contact-name" 
                name="contact[name]" 
                class="contact__form-input"
                placeholder="Ваше имя"
                required
              >
            </div>

            <div class="contact__form-group">
              <label class="contact__form-label" for="contact-email">Email *</label>
              <input 
                type="email" 
                id="contact-email" 
                name="contact[email]" 
                class="contact__form-input"
                placeholder="email@example.com"
                required
              >
            </div>

            <div class="contact__form-group">
              <label class="contact__form-label" for="contact-phone">Телефон</label>
              <input 
                type="tel" 
                id="contact-phone" 
                name="contact[phone]" 
                class="contact__form-input"
                placeholder="+7 (___) ___-__-__"
              >
            </div>

            <div class="contact__form-group">
              <label class="contact__form-label" for="contact-service">Услуга</label>
              <select id="contact-service" name="contact[service]" class="contact__form-select">
                <option value="">Выберите услугу</option>
                <option value="new-store">Создание магазина</option>
                <option value="redesign">Редизайн</option>
                <option value="migration">Миграция на Shopify</option>
                <option value="optimization">Оптимизация</option>
                <option value="support">Техподдержка</option>
              </select>
            </div>

            <div class="contact__form-group contact__form-group--full">
              <label class="contact__form-label" for="contact-message">Сообщение *</label>
              <textarea 
                id="contact-message" 
                name="contact[body]" 
                class="contact__form-textarea"
                placeholder="Расскажите о вашем проекте..."
                required
              ></textarea>
            </div>

            <div class="contact__form-group contact__form-group--full">
              <button type="submit" class="contact__form-submit">
                Отправить заявку
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="22" y1="2" x2="11" y2="13"></line>
                  <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                </svg>
              </button>
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Контакты",
  "settings": [
    {
      "type": "text",
      "id": "email",
      "default": "hello@duso-ecom.com",
      "label": "Email"
    },
    {
      "type": "text",
      "id": "phone",
      "default": "+7 (800) 123-45-67",
      "label": "Телефон"
    }
  ],
  "presets": [
    {
      "name": "Контакты"
    }
  ]
}
{% endschema %}
