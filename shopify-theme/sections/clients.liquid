{% comment %} Clients Section - Exact match to React StoreLogosWow.jsx {% endcomment %}

<section class="clients-section py-12 sm:py-20 relative overflow-hidden">
  <div class="container relative z-10">
    
    {% comment %} Header {% endcomment %}
    <div class="text-center mb-8 sm:mb-12">
      <div class="section-badge glass" style="display: inline-flex; border-color: rgba(16, 185, 129, 0.2);">
        <span class="section-badge-dot"></span>
        <span class="section-badge-text">{{ 'clients.badge' | t }}</span>
      </div>
      <h2 class="section-title">
        {{ 'clients.title_1' | t }} <span class="gradient-text">{{ 'clients.title_2' | t }}</span> {{ 'clients.title_3' | t }}
      </h2>
      <p class="section-description">
        {{ 'clients.description' | t }}
      </p>
    </div>
    
    {% comment %} Scrolling logos container {% endcomment %}
    <div class="stores-carousel">
      <div class="stores-track" id="stores-track">
        {% for i in (1..20) %}
          {% assign variant = i | modulo: 2 %}
          <div class="store-card floating-card">
            <div class="store-card-logo">
              <span>{% cycle 'FS', 'TG', 'HD', 'SZ', 'BS', 'PW', 'LW', 'OF', 'AP', 'KW' %}</span>
            </div>
            <div class="store-card-info">
              <p class="store-card-name">{% cycle 'FashionStore', 'TechGadgets', 'HomeDesign', 'SportZone', 'BeautyShop', 'PetWorld', 'LuxWatch', 'OrganicFood', 'AutoParts', 'KidsWorld' %}</p>
              <p class="store-card-domain">{% cycle 'fashionstore.ru', 'techgadgets.ru', 'homedesign.ru', 'sportzone.ru', 'beautyshop.ru', 'petworld.ru', 'luxwatch.ru', 'organicfood.ru', 'autoparts.ru', 'kidsworld.ru' %}</p>
              <div style="margin-top: 0.25rem;">
                <img src="{% cycle 'https://flagcdn.com/w20/ru.png', 'https://flagcdn.com/w20/ua.png', 'https://flagcdn.com/w20/kz.png', 'https://flagcdn.com/w20/by.png', 'https://flagcdn.com/w20/uz.png' %}" alt="Flag" style="width: 1rem; height: 0.75rem; object-fit: cover; border-radius: 0.125rem;">
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    
    {% comment %} Countries grid {% endcomment %}
    <div class="countries-grid">
      {% assign countries = "russia,ukraine,kazakhstan,belarus,uzbekistan,azerbaijan,georgia,armenia" | split: "," %}
      {% assign flags = "ru,ua,kz,by,uz,az,ge,am" | split: "," %}
      {% assign counts = "3200+,1500+,800+,450+,250+,180+,80+,40+" | split: "," %}
      {% assign colors = "from-red-500/20 to-blue-500/20,from-blue-500/20 to-yellow-500/20,from-cyan-500/20 to-yellow-500/20,from-red-500/20 to-green-500/20,from-blue-500/20 to-green-500/20,from-blue-500/20 to-red-500/20,from-red-500/20 to-white/10,from-red-500/20 to-orange-500/20" | split: "," %}
      
      {% for i in (0..7) %}
        <div class="country-card floating-card glass transition-all cursor-pointer hover:scale-105">
          <div class="flex flex-col items-center text-center">
            <div class="country-flag-wrapper" style="background: linear-gradient(135deg, {% if i == 0 %}rgba(239, 68, 68, 0.2), rgba(59, 130, 246, 0.2){% elsif i == 1 %}rgba(59, 130, 246, 0.2), rgba(234, 179, 8, 0.2){% elsif i == 2 %}rgba(6, 182, 212, 0.2), rgba(234, 179, 8, 0.2){% elsif i == 3 %}rgba(239, 68, 68, 0.2), rgba(34, 197, 94, 0.2){% elsif i == 4 %}rgba(59, 130, 246, 0.2), rgba(34, 197, 94, 0.2){% elsif i == 5 %}rgba(59, 130, 246, 0.2), rgba(239, 68, 68, 0.2){% elsif i == 6 %}rgba(239, 68, 68, 0.2), rgba(255, 255, 255, 0.1){% else %}rgba(239, 68, 68, 0.2), rgba(249, 115, 22, 0.2){% endif %});">
              <img src="https://flagcdn.com/w40/{{ flags[i] }}.png" alt="{{ countries[i] }}" class="country-flag">
            </div>
            <p class="country-name">{{ 'clients.countries.' | append: countries[i] | t }}</p>
            <p class="country-count">{{ counts[i] }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
    
  </div>
</section>

{% schema %}
{
  "name": "Clients",
  "settings": []
}
{% endschema %}
