<!-- Clients Section -->
<section class="clients-section py-12 sm:py-20 relative overflow-hidden">
  <div class="container relative z-10">
    <div class="text-center mb-8 sm:mb-12">
      <div class="section-badge glass" style="display:inline-flex;border-color:rgba(16,185,129,0.2)">
        <span class="section-badge-dot"></span>
        <span class="section-badge-text">{{ 'clients.badge' | t }}</span>
      </div>
      <h2 class="section-title">{{ 'clients.title_1' | t }} <span class="gradient-text">{{ 'clients.title_2' | t }}</span> {{ 'clients.title_3' | t }}</h2>
      <p class="section-description">{{ 'clients.description' | t }}</p>
    </div>

    <!-- Stores Carousel -->
    <div class="stores-carousel mb-8">
      <div class="stores-track" id="stores-track">
        {% assign store_names = "FashionStore,TechGadgets,HomeDesign,SportZone,BeautyShop,PetWorld,LuxWatch,OrganicFood,AutoParts,KidsWorld,GamerZone,BookStore,MusicShop,ArtGallery,FoodMarket" | split: "," %}
        {% assign store_domains = "fashionstore.ru,techgadgets.ua,homedesign.kz,sportzone.by,beautyshop.ru,petworld.uz,luxwatch.ru,organicfood.az,autoparts.ge,kidsworld.am,gamerzone.ru,bookstore.ua,musicshop.kz,artgallery.by,foodmarket.ru" | split: "," %}
        {% assign store_logos = "FS,TG,HD,SZ,BS,PW,LW,OF,AP,KW,GZ,BK,MS,AG,FM" | split: "," %}
        {% assign store_flags = "ru,ua,kz,by,ru,uz,ru,az,ge,am,ru,ua,kz,by,ru" | split: "," %}
        {% for i in (0..14) %}
        <div class="store-card">
          <div class="store-card-logo"><span>{{ store_logos[i] }}</span></div>
          <div class="store-card-info">
            <p class="store-card-name">{{ store_names[i] }}</p>
            <p class="store-card-domain">{{ store_domains[i] }}</p>
            <div style="margin-top:0.25rem">
              <img src="https://flagcdn.com/w20/{{ store_flags[i] }}.png" alt="Flag" style="width:1rem;height:0.75rem;object-fit:cover;border-radius:0.125rem">
            </div>
          </div>
        </div>
        {% endfor %}
        {% for i in (0..14) %}
        <div class="store-card">
          <div class="store-card-logo"><span>{{ store_logos[i] }}</span></div>
          <div class="store-card-info">
            <p class="store-card-name">{{ store_names[i] }}</p>
            <p class="store-card-domain">{{ store_domains[i] }}</p>
            <div style="margin-top:0.25rem">
              <img src="https://flagcdn.com/w20/{{ store_flags[i] }}.png" alt="Flag" style="width:1rem;height:0.75rem;object-fit:cover;border-radius:0.125rem">
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>

    <!-- Countries Grid -->
    <div class="countries-grid">
      {% assign flags = "ru,ua,kz,by,uz,az,ge,am" | split: "," %}
      {% assign counts = "3200+,1500+,800+,450+,250+,180+,80+,40+" | split: "," %}
      {% assign country_keys = "russia,ukraine,kazakhstan,belarus,uzbekistan,azerbaijan,georgia,armenia" | split: "," %}
      {% for i in (0..7) %}
      <div class="country-card floating-card glass cursor-pointer">
        <div class="country-flag-wrapper" style="background:linear-gradient(135deg,rgba(249,115,22,0.2),rgba(16,185,129,0.2))">
          <img src="https://flagcdn.com/w40/{{ flags[i] }}.png" alt="{{ country_keys[i] }}" class="country-flag">
        </div>
        <p class="country-name">{{ 'countries.' | append: country_keys[i] | t }}</p>
        <p class="country-count">{{ counts[i] }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Clients",
  "settings": []
}
{% endschema %}
