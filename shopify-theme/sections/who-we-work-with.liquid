{% comment %}
  Who We Work With Section - Exact copy from React WhoWeWorkWith.jsx
{% endcomment %}

<section class="py-24 relative z-10">
  <div class="absolute inset-0 glass opacity-20"></div>
  
  <div class="max-w-7xl mx-auto px-6 relative">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="text-orange-500 text-sm font-medium tracking-wider uppercase mb-4 block">
        {{ 'who_we_work_with.section_title' | t }}
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
        {{ 'who_we_work_with.title_1' | t }} <span class="text-emerald-500 text-glow-emerald">{{ 'who_we_work_with.title_highlight' | t }}</span>
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        {{ 'who_we_work_with.subtitle' | t }}
      </p>
    </div>

    <!-- Cards Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% assign audience_titles = "Стартапы,Действующий бизнес,Международные компании,D2C бренды,Быстрорастущие компании,Маркетплейсы" | split: "," %}
      {% assign audience_icons = "rocket,building-2,globe,shopping-bag,trending-up,users" | split: "," %}
      {% assign audience_descriptions = "Запускаете первый интернет-магазин? Поможем создать прочный фундамент для роста.,Хотите перейти в онлайн или улучшить текущий магазин? Мы знаем как.,Выходите на рынки СНГ или за рубеж? Настроим мультирегиональные продажи.,Продаёте напрямую потребителю? Создадим уникальный опыт для вашего бренда.,Растёте быстрее чем справляетесь? Масштабируем инфраструктуру.,Хотите создать свой маркетплейс? У нас есть решение." | split: "," %}
      {% assign audience_benefits = "Быстрый запуск за 2-4 недели|Минимальные начальные затраты|Масштабируемая архитектура,Миграция без потери данных|Увеличение конверсии|Автоматизация процессов,Мультивалютность|Локализация контента|Международная доставка,Брендинг и UX|Подписочные модели|Программы лояльности,Shopify Plus|Высокие нагрузки|Enterprise интеграции,Multi-vendor платформа|Управление продавцами|Комиссионные системы" | split: "," %}
      {% assign audience_colors = "orange,emerald,orange,emerald,orange,emerald" | split: "," %}
      
      {% for i in (0..5) %}
        {% assign benefits = audience_benefits[i] | split: "|" %}
        <div
          data-testid="audience-card-{{ i }}"
          class="floating-card rounded-2xl p-6 group hover:border-orange-500/30 transition-all duration-500"
        >
          <!-- Icon -->
          <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-4 transition-all duration-300 group-hover:scale-110 {% if audience_colors[i] == 'orange' %}bg-orange-500/10 group-hover:bg-orange-500/20{% else %}bg-emerald-500/10 group-hover:bg-emerald-500/20{% endif %}">
            <i data-lucide="{{ audience_icons[i] }}" class="w-7 h-7 {% if audience_colors[i] == 'orange' %}text-orange-500{% else %}text-emerald-500{% endif %}"></i>
          </div>

          <!-- Content -->
          <h3 class="text-xl font-bold text-white mb-2 group-hover:text-orange-500 transition-colors">
            {{ audience_titles[i] }}
          </h3>
          <p class="text-gray-400 text-sm mb-4">
            {{ audience_descriptions[i] }}
          </p>

          <!-- Benefits -->
          <ul class="space-y-2">
            {% for benefit in benefits %}
              <li class="flex items-center gap-2 text-gray-300 text-sm">
                <div class="w-1.5 h-1.5 rounded-full {% if audience_colors[i] == 'orange' %}bg-orange-500{% else %}bg-emerald-500{% endif %}"></div>
                {{ benefit }}
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <p class="text-gray-400 mb-4">{{ 'who_we_work_with.not_found' | t }}</p>
      <a
        href="/pages/contact"
        class="bg-gradient-to-r from-orange-500 to-orange-600 text-white hover:from-orange-600 hover:to-orange-700 px-8 py-4 rounded-xl shadow-lg shadow-orange-500/25 inline-flex items-center gap-2 transition-all duration-300 hover:scale-105"
      >
        {{ 'who_we_work_with.cta' | t }}
        <i data-lucide="arrow-right" class="w-5 h-5"></i>
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Who We Work With",
  "settings": []
}
{% endschema %}
