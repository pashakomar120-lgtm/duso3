{% comment %}
  Footer Section - Exact copy from React Footer.jsx
{% endcomment %}

<footer class="pt-16 pb-8 relative z-10 border-t border-white/10">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid md:grid-cols-4 gap-12 mb-12">
      <!-- Brand Column -->
      <div class="md:col-span-1">
        <a href="/" class="text-2xl font-bold text-white mb-4 inline-block">
          duso<span class="text-orange-500">_</span>ecom
        </a>
        <p class="text-gray-400 text-sm leading-relaxed mb-6">
          {{ 'footer.description' | t }}
        </p>
        <!-- Social Links -->
        <div class="flex gap-3">
          <a href="#" class="w-10 h-10 rounded-lg glass flex items-center justify-center text-gray-400 hover:text-white hover:bg-white/10 transition-all duration-300">
            <i data-lucide="instagram" class="w-5 h-5"></i>
          </a>
          <a href="#" class="w-10 h-10 rounded-lg glass flex items-center justify-center text-gray-400 hover:text-white hover:bg-white/10 transition-all duration-300">
            <i data-lucide="linkedin" class="w-5 h-5"></i>
          </a>
          <a href="#" class="w-10 h-10 rounded-lg glass flex items-center justify-center text-gray-400 hover:text-white hover:bg-white/10 transition-all duration-300">
            <i data-lucide="youtube" class="w-5 h-5"></i>
          </a>
          <a href="https://t.me/duso_ecom" class="w-10 h-10 rounded-lg glass flex items-center justify-center text-gray-400 hover:text-white hover:bg-white/10 transition-all duration-300">
            <i data-lucide="send" class="w-5 h-5"></i>
          </a>
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="text-white font-semibold mb-4">{{ 'footer.navigation' | t }}</h4>
        <ul class="space-y-3">
          <li><a href="/" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">{{ 'header.nav_home' | t }}</a></li>
          <li><a href="/pages/about" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">{{ 'header.nav_about' | t }}</a></li>
          <li><a href="/pages/services" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">{{ 'header.nav_services' | t }}</a></li>
          <li><a href="/pages/portfolio" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">{{ 'header.nav_portfolio' | t }}</a></li>
          <li><a href="/pages/contact" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">{{ 'header.nav_contact' | t }}</a></li>
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-white font-semibold mb-4">{{ 'footer.popular_services' | t }}</h4>
        <ul class="space-y-3">
          <li><a href="/pages/services" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">Shopify разработка</a></li>
          <li><a href="/pages/services" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">Дизайн магазина</a></li>
          <li><a href="/pages/services" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">SEO оптимизация</a></li>
          <li><a href="/pages/services" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">Таргетированная реклама</a></li>
          <li><a href="/pages/services" class="text-gray-400 hover:text-orange-500 transition-colors text-sm">Техподдержка 24/7</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-white font-semibold mb-4">{{ 'footer.contacts' | t }}</h4>
        <ul class="space-y-3">
          <li class="flex items-center gap-2 text-gray-400 text-sm">
            <i data-lucide="mail" class="w-4 h-4 text-orange-500"></i>
            hello@duso-ecom.com
          </li>
          <li class="flex items-center gap-2 text-gray-400 text-sm">
            <i data-lucide="phone" class="w-4 h-4 text-orange-500"></i>
            +7 (999) 123-45-67
          </li>
          <li class="flex items-center gap-2 text-gray-400 text-sm">
            <i data-lucide="send" class="w-4 h-4 text-orange-500"></i>
            @duso_ecom
          </li>
          <li class="flex items-center gap-2 text-gray-400 text-sm">
            <i data-lucide="map-pin" class="w-4 h-4 text-orange-500"></i>
            Весь СНГ
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-500 text-sm">
        © 2024 duso_ecom. {{ 'footer.copyright' | t }}
      </p>
      <div class="flex gap-6">
        <a href="/pages/privacy" class="text-gray-500 hover:text-white text-sm transition-colors">
          {{ 'footer.privacy' | t }}
        </a>
        <a href="/pages/terms" class="text-gray-500 hover:text-white text-sm transition-colors">
          {{ 'footer.terms' | t }}
        </a>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": []
}
{% endschema %}
