{% comment %} Footer Section - Exact match to React Footer.jsx {% endcomment %}

<footer class="footer relative z-10">
  <div class="footer-bg glass-strong"></div>
  
  <div class="container footer-content relative">
    <div class="footer-grid mb-8 sm:mb-12">
      
      {% comment %} Brand Column {% endcomment %}
      <div class="footer-brand">
        <a href="/" class="footer-brand-logo" data-testid="footer-logo">
          <span class="logo-text text-xl sm:text-2xl">
            <span class="logo-highlight">duso</span>_ecom
          </span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/><path d="M5 3v4"/><path d="M19 17v4"/><path d="M3 5h4"/><path d="M17 19h4"/></svg>
        </a>
        <p class="footer-brand-description">
          {{ 'footer.description' | t }}
        </p>
        <div class="footer-socials">
          <a href="{{ settings.social_facebook }}" target="_blank" rel="noopener noreferrer" class="footer-social glass" data-testid="social-facebook" aria-label="Facebook">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
          </a>
          <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener noreferrer" class="footer-social glass" data-testid="social-instagram" aria-label="Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
          </a>
          <a href="{{ settings.social_linkedin }}" target="_blank" rel="noopener noreferrer" class="footer-social glass" data-testid="social-linkedin" aria-label="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>
          </a>
        </div>
      </div>
      
      {% comment %} Navigation Column {% endcomment %}
      <div>
        <h4 class="footer-column-title orange">{{ 'footer.navigation' | t }}</h4>
        <nav class="footer-nav">
          <a href="/" class="footer-link">
            <span>{{ 'nav.home' | t }}</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
          </a>
          <a href="/pages/about" class="footer-link">
            <span>{{ 'nav.about' | t }}</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
          </a>
          <a href="/pages/services" class="footer-link">
            <span>{{ 'nav.services' | t }}</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
          </a>
          <a href="/pages/portfolio" class="footer-link">
            <span>{{ 'nav.portfolio' | t }}</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
          </a>
          <a href="/pages/resources" class="footer-link">
            <span>{{ 'nav.resources' | t }}</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
          </a>
          <a href="/pages/contact" class="footer-link">
            <span>{{ 'nav.contact' | t }}</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
          </a>
        </nav>
      </div>
      
      {% comment %} Services Column {% endcomment %}
      <div>
        <h4 class="footer-column-title emerald">{{ 'footer.popular_services' | t }}</h4>
        <nav class="footer-nav">
          <a href="/pages/services" class="footer-link" style="color: var(--color-gray-400);">
            <span>Shopify магазин</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
          </a>
          <a href="/pages/services" class="footer-link" style="color: var(--color-gray-400);">
            <span>Структура и дизайн</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
          </a>
          <a href="/pages/services" class="footer-link" style="color: var(--color-gray-400);">
            <span>Платёжные системы</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
          </a>
          <a href="/pages/services" class="footer-link" style="color: var(--color-gray-400);">
            <span>Оптимизация сайта</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
          </a>
          <a href="/pages/services" class="footer-link" style="color: var(--color-gray-400);">
            <span>Таргетированная реклама</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"></line><polyline points="7 7 17 7 17 17"></polyline></svg>
          </a>
        </nav>
      </div>
      
      {% comment %} Contact Column {% endcomment %}
      <div>
        <h4 class="footer-column-title orange">{{ 'footer.contacts' | t }}</h4>
        <div class="footer-contact">
          <a href="mailto:{{ settings.contact_email }}" class="footer-contact-item" data-testid="footer-email">
            <div class="footer-contact-icon glass">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm">Email</p>
              <p class="text-white font-medium" style="word-break: break-all;">{{ settings.contact_email }}</p>
            </div>
          </a>
          <a href="tel:{{ settings.contact_phone }}" class="footer-contact-item" data-testid="footer-phone">
            <div class="footer-contact-icon glass">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm">Телефон</p>
              <p class="text-white font-medium">{{ settings.contact_phone }}</p>
            </div>
          </a>
          <div class="footer-contact-item">
            <div class="footer-contact-icon glass">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
            </div>
            <div>
              <p class="text-gray-400 text-sm">Адрес</p>
              <p class="text-white font-medium" style="padding-top: 0.375rem;">{{ settings.contact_address }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    {% comment %} Bottom Bar {% endcomment %}
    <div class="footer-bottom pt-6 sm:pt-8">
      <div class="footer-bottom-content">
        <p class="footer-copyright">
          {{ 'footer.copyright' | t | replace: 'duso_ecom', '<span class="text-orange-500">duso_ecom</span>' }}
        </p>
        <div class="footer-legal">
          <a href="/pages/privacy" class="footer-legal-link">{{ 'footer.privacy' | t }}</a>
          <a href="/pages/terms" class="footer-legal-link">{{ 'footer.terms' | t }}</a>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": []
}
{% endschema %}
