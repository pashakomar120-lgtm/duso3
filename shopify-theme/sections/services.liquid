<section id="services" class="py-24 relative z-10">
  <div class="absolute inset-0 glass-strong opacity-50"></div>
  
  <div class="max-w-7xl mx-auto px-6 relative">
    <div class="text-center mb-16">
      <span class="text-orange-500 text-sm font-medium tracking-wider uppercase mb-4 block">Наши услуги</span>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Мы <span class="text-orange-500 text-glow-orange">создаём</span> успешные магазины
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">12 ключевых услуг для роста вашего e-commerce бизнеса</p>
    </div>

    <!-- Сітка послуг 4x3 -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
      <!-- 1. Структура и дизайн -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-orange-500 to-orange-600 flex items-center justify-center mb-4 shadow-lg shadow-orange-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="palette" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-orange-500 transition-colors">Структура и дизайн</h3>
        <p class="text-gray-400 text-sm mb-3">UX/UI дизайн, адаптивная вёрстка, фирменный стиль</p>
        <span class="text-orange-500 font-semibold text-sm">от $3,000</span>
      </div>

      <!-- 2. Платёжные системы -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-emerald-500 to-emerald-600 flex items-center justify-center mb-4 shadow-lg shadow-emerald-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="credit-card" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-emerald-500 transition-colors">Платёжные системы</h3>
        <p class="text-gray-400 text-sm mb-3">Stripe, PayPal, криптовалюты, рассрочка</p>
        <span class="text-emerald-500 font-semibold text-sm">от $500</span>
      </div>

      <!-- 3. Оптимизация сайта -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center mb-4 shadow-lg shadow-purple-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="zap" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-purple-500 transition-colors">Оптимизация сайта</h3>
        <p class="text-gray-400 text-sm mb-3">SEO, скорость загрузки, Core Web Vitals</p>
        <span class="text-purple-500 font-semibold text-sm">от $800</span>
      </div>

      <!-- 4. Таргетированная реклама -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-pink-500 to-pink-600 flex items-center justify-center mb-4 shadow-lg shadow-pink-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="target" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-pink-500 transition-colors">Таргетированная реклама</h3>
        <p class="text-gray-400 text-sm mb-3">Facebook, Instagram, Google, TikTok Ads</p>
        <span class="text-pink-500 font-semibold text-sm">от $1,500/мес</span>
      </div>

      <!-- 5. Доставка и отправка -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-cyan-500 to-cyan-600 flex items-center justify-center mb-4 shadow-lg shadow-cyan-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="truck" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-cyan-500 transition-colors">Доставка и отправка</h3>
        <p class="text-gray-400 text-sm mb-3">Интеграция курьеров, расчёт стоимости</p>
        <span class="text-cyan-500 font-semibold text-sm">от $700</span>
      </div>

      <!-- 6. Аналитика и трекинг -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center mb-4 shadow-lg shadow-blue-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="bar-chart-3" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-blue-500 transition-colors">Аналитика и трекинг</h3>
        <p class="text-gray-400 text-sm mb-3">GA4, Meta Pixel, воронки продаж</p>
        <span class="text-blue-500 font-semibold text-sm">от $600</span>
      </div>

      <!-- 7. Оптимизация товаров -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-amber-500 to-amber-600 flex items-center justify-center mb-4 shadow-lg shadow-amber-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="package" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-amber-500 transition-colors">Оптимизация товаров</h3>
        <p class="text-gray-400 text-sm mb-3">SEO-описания, фото, cross-sell, upsell</p>
        <span class="text-amber-500 font-semibold text-sm">от $400</span>
      </div>

      <!-- 8. Базовая автоматизация -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 flex items-center justify-center mb-4 shadow-lg shadow-indigo-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="bot" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-indigo-500 transition-colors">Базовая автоматизация</h3>
        <p class="text-gray-400 text-sm mb-3">Email-рассылки, склад, обработка заказов</p>
        <span class="text-indigo-500 font-semibold text-sm">от $900</span>
      </div>

      <!-- 9. Поддержка магазина -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-teal-500 to-teal-600 flex items-center justify-center mb-4 shadow-lg shadow-teal-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="headphones" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-teal-500 transition-colors">Поддержка магазина</h3>
        <p class="text-gray-400 text-sm mb-3">24/7 поддержка, обновления, мониторинг</p>
        <span class="text-teal-500 font-semibold text-sm">от $500/мес</span>
      </div>

      <!-- 10. Маркетплейсы -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-rose-500 to-rose-600 flex items-center justify-center mb-4 shadow-lg shadow-rose-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="store" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-rose-500 transition-colors">Маркетплейсы</h3>
        <p class="text-gray-400 text-sm mb-3">Wildberries, Ozon, Amazon, TikTok Shop</p>
        <span class="text-rose-500 font-semibold text-sm">от $800</span>
      </div>

      <!-- 11. Digital продукты -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-violet-500 to-violet-600 flex items-center justify-center mb-4 shadow-lg shadow-violet-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="file-code" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-violet-500 transition-colors">Digital продукты</h3>
        <p class="text-gray-400 text-sm mb-3">Курсы, ebook, подписки, лицензии</p>
        <span class="text-violet-500 font-semibold text-sm">от $600</span>
      </div>

      <!-- 12. SOP -->
      <div class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300 group cursor-pointer">
        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-lime-500 to-lime-600 flex items-center justify-center mb-4 shadow-lg shadow-lime-500/30 group-hover:scale-110 transition-transform">
          <i data-lucide="clipboard-list" class="w-7 h-7 text-white"></i>
        </div>
        <h3 class="text-white font-bold text-lg mb-2 group-hover:text-lime-500 transition-colors">SOP</h3>
        <p class="text-gray-400 text-sm mb-3">Стандартные процедуры, масштабирование</p>
        <span class="text-lime-500 font-semibold text-sm">от $1,200</span>
      </div>
    </div>

    <div class="text-center mt-12">
      <a href="/pages/services" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white hover:from-orange-600 hover:to-orange-700 px-8 py-4 rounded-xl shadow-lg shadow-orange-500/25 inline-flex items-center gap-2 transition-all duration-300 hover:scale-105">
        Подробнее об услугах
        <i data-lucide="arrow-right" class="w-5 h-5"></i>
      </a>
    </div>
  </div>
</section>

