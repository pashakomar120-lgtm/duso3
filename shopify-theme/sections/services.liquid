<!-- Services Section -->
<section class="services-section relative z-10">
  <div class="container relative">
    <div class="text-center mb-8 sm:mb-12">
      <span class="section-label text-orange-500">{{ 'services.label' | t }}</span>
      <h2 class="section-title">{{ 'services.title_1' | t }} <span class="gradient-text">{{ 'services.title_2' | t }}</span> {{ 'services.title_3' | t }}</h2>
      <p class="section-description">{{ 'services.description' | t }}</p>
    </div>

    <!-- Services Tabs -->
    <div class="services-tabs mb-8">
      {% assign service_tabs = "Все,Создание,Дизайн,Интеграции,Маркетинг,Поддержка" | split: "," %}
      {% for tab in service_tabs %}
      <button class="service-tab {% if forloop.first %}active{% endif %}">{{ tab }}</button>
      {% endfor %}
    </div>

    <!-- Service Content -->
    <div class="service-content">
      <div class="service-info floating-card">
        <div class="service-header">
          <div class="service-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
          </div>
          <div>
            <h3 class="service-title">Shopify магазин под ключ</h3>
            <p class="service-price">от $2,500</p>
          </div>
        </div>
        <p class="service-description">Полный цикл разработки интернет-магазина на Shopify — от концепции до запуска. Включает премиум-тему, настройку, мобильную адаптацию и интеграции с платёжными системами СНГ.</p>
        
        <div class="service-benefits mb-6">
          <p class="service-benefits-title">{{ 'services.what_you_get' | t }}</p>
          <div class="service-benefits-grid">
            {% assign benefits = "Премиум Shopify тема,Адаптивный дизайн,Интеграция оплаты,SEO оптимизация,Обучение работе,30 дней поддержки" | split: "," %}
            {% for benefit in benefits %}
            <div class="service-benefit">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
              <span>{{ benefit }}</span>
            </div>
            {% endfor %}
          </div>
        </div>

        <!-- Gift Banner -->
        <div class="gift-banner">
          <div class="gift-banner-glow"></div>
          <div class="gift-banner-content">
            <div class="gift-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="8" width="18" height="4" rx="1"/><path d="M12 8v13"/><path d="M19 12v7a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2v-7"/><path d="M7.5 8a2.5 2.5 0 0 1 0-5A4.8 8 0 0 1 12 8a4.8 8 0 0 1 4.5-5 2.5 2.5 0 0 1 0 5"/></svg>
            </div>
            <div>
              <p class="gift-title">Бонус при заказе сегодня!</p>
              <p class="gift-description">Бесплатная SEO-оптимизация</p>
              <p class="gift-value">Стоимость: $450</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Features List -->
      <div class="features-list">
        {% assign features = "Аудит бизнес-потребностей и выбор оптимального плана Shopify,Подбор и кастомизация темы под бренд,Настройка платёжных систем СНГ,Интеграция с CRM и службами доставки,SEO-оптимизация и настройка аналитики,Обучение работе с админ-панелью,Запуск и 30-дневная поддержка" | split: "," %}
        {% for feature in features %}
        <div class="feature-item">
          <div class="feature-dot"></div>
          <span class="feature-text">{{ feature }}</span>
        </div>
        {% endfor %}
        
        <a href="/pages/services" class="btn btn-secondary glass mt-4" style="padding:1rem 2rem">
          {{ 'services.all_services_link' | t }}
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Services",
  "settings": []
}
{% endschema %}
