{% comment %}
  Hero Section - Exact copy from React HeroSection.jsx
{% endcomment %}

<section class="min-h-screen pt-24 sm:pt-32 pb-8 sm:pb-16 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 relative z-10">
    <div class="grid lg:grid-cols-5 gap-8 lg:gap-12 items-center min-h-[60vh] lg:min-h-[75vh]">
      <!-- Left Content - 3 columns -->
      <div class="lg:col-span-3 space-y-6 sm:space-y-8 fade-in-up">
        <!-- Badge with glow -->
        <div class="inline-flex items-center gap-2 glass rounded-full px-3 sm:px-5 py-2 sm:py-2.5 border border-orange-500/20 hover:border-orange-500/40 transition-all duration-300 group cursor-pointer">
          <div class="w-6 h-6 sm:w-7 sm:h-7 bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg flex items-center justify-center shadow-lg shadow-orange-500/30 group-hover:scale-110 transition-transform">
            <i data-lucide="sparkles" class="w-3 h-3 sm:w-4 sm:h-4 text-white"></i>
          </div>
          <span class="text-white text-xs sm:text-sm font-medium tracking-wider">
            {{ 'hero.badge' | t }}
          </span>
          <span class="text-emerald-500 text-[10px] sm:text-xs px-2 py-0.5 bg-emerald-500/10 rounded-full">
            {{ 'hero.rank' | t }}
          </span>
        </div>

        <!-- Main Headline with glow effect -->
        <div class="space-y-1 sm:space-y-2">
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight tracking-tight">
            {{ 'hero.title_1' | t }} <span class="text-orange-500 text-glow-orange">{{ 'hero.title_shopify' | t }}</span> {{ 'hero.title_2' | t }}
          </h1>
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight tracking-tight">
            <span class="text-white">{{ 'hero.title_3' | t }} </span>
            <span class="gradient-text">{{ 'hero.title_sell' | t }}</span>
          </h1>
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight tracking-tight">
            {{ 'hero.title_4' | t }} <span class="text-emerald-500 text-glow-emerald">{{ 'hero.title_cis' | t }}</span>
          </h1>
        </div>

        <!-- Description -->
        <p class="text-gray-400 text-base sm:text-lg max-w-xl">
          {{ 'hero.description_1' | t }} <span class="text-white font-semibold">{{ 'hero.description_weeks' | t }}</span>. 
          {{ 'hero.description_2' | t }} <span class="text-orange-500 font-semibold">{{ 'hero.description_projects' | t }}</span> {{ 'hero.description_3' | t }}
        </p>

        <!-- Trust badges -->
        <div class="flex flex-wrap items-center gap-3 sm:gap-4 text-xs sm:text-sm">
          <div class="flex items-center gap-2 text-gray-400">
            <i data-lucide="check-circle" class="w-4 h-4 text-emerald-500"></i>
            <span>{{ 'hero.trust_1' | t }}</span>
          </div>
          <div class="flex items-center gap-2 text-gray-400">
            <i data-lucide="check-circle" class="w-4 h-4 text-emerald-500"></i>
            <span>{{ 'hero.trust_2' | t }}</span>
          </div>
          <div class="flex items-center gap-2 text-gray-400">
            <i data-lucide="check-circle" class="w-4 h-4 text-emerald-500"></i>
            <span>{{ 'hero.trust_3' | t }}</span>
          </div>
        </div>

        <!-- CTA Buttons with glow -->
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
          <a
            href="/pages/contact"
            class="bg-gradient-to-r from-orange-500 to-orange-600 text-white hover:from-orange-600 hover:to-orange-700 px-6 sm:px-8 py-3 sm:py-4 text-sm sm:text-base font-medium transition-all duration-300 hover:scale-105 shadow-lg shadow-orange-500/30 hover:shadow-orange-500/50 btn-glow rounded-xl w-full sm:w-auto flex items-center justify-center gap-2"
            data-testid="hero-cta-primary"
          >
            {{ 'hero.cta_primary' | t }}
            <i data-lucide="arrow-right" class="w-4 h-4 sm:w-5 sm:h-5"></i>
          </a>
          <a
            href="/pages/portfolio"
            class="glass border-2 border-white/10 text-white hover:border-emerald-500/50 hover:bg-emerald-500/10 px-6 sm:px-8 py-3 sm:py-4 text-sm sm:text-base font-medium transition-all duration-300 rounded-xl group w-full sm:w-auto flex items-center justify-center gap-2"
            data-testid="hero-cta-secondary"
          >
            <i data-lucide="play" class="w-4 h-4 sm:w-5 sm:h-5 group-hover:scale-110 transition-transform"></i>
            {{ 'hero.cta_secondary' | t }}
          </a>
        </div>

        <!-- Stats mini row -->
        <div class="flex gap-6 sm:gap-8 pt-4">
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-orange-500">6500+</div>
            <div class="text-[10px] sm:text-xs text-gray-500">{{ 'hero.stat_stores' | t }}</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-emerald-500">$3B+</div>
            <div class="text-[10px] sm:text-xs text-gray-500">{{ 'hero.stat_revenue' | t }}</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-white">15+</div>
            <div class="text-[10px] sm:text-xs text-gray-500">{{ 'hero.stat_countries' | t }}</div>
          </div>
        </div>
      </div>

      <!-- Right Content - 2 columns - Grid of images -->
      <div class="lg:col-span-2 relative hidden lg:block">
        <!-- Background glow -->
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[400px] bg-orange-500/20 rounded-full blur-[100px]"></div>
        <div class="absolute top-1/4 right-0 w-[200px] h-[200px] bg-emerald-500/15 rounded-full blur-[80px]"></div>
        
        <!-- Images Grid - No overlap -->
        <div class="relative grid grid-cols-2 gap-4">
          <!-- Top row -->
          <div class="floating-card rounded-2xl overflow-hidden h-40 float" data-testid="hero-image-1">
            <img 
              src="https://images.unsplash.com/photo-1739459365519-9d3978d884aa?w=400" 
              alt="E-commerce mockup 1" 
              class="w-full h-full object-cover"
              loading="lazy"
            >
          </div>
          <div class="floating-card rounded-2xl overflow-hidden h-48 float-slow" style="animation-delay: 0.5s" data-testid="hero-image-2">
            <img 
              src="https://images.unsplash.com/photo-1642052503083-bc49dd433478?w=400" 
              alt="E-commerce mockup 2" 
              class="w-full h-full object-cover"
              loading="lazy"
            >
          </div>
          
          <!-- Bottom row -->
          <div class="floating-card rounded-2xl overflow-hidden h-48 float-fast" style="animation-delay: 1s" data-testid="hero-image-3">
            <img 
              src="https://images.unsplash.com/photo-1588601515608-6a6814976b50?w=400" 
              alt="E-commerce mockup 3" 
              class="w-full h-full object-cover"
              loading="lazy"
            >
          </div>
          <div class="floating-card rounded-2xl overflow-hidden h-40 float" style="animation-delay: 1.5s" data-testid="hero-image-4">
            <img 
              src="https://images.unsplash.com/photo-1604074131228-9d48b811bd80?w=400" 
              alt="E-commerce mockup 4" 
              class="w-full h-full object-cover"
              loading="lazy"
            >
          </div>

          <!-- Floating badge -->
          <div class="absolute -bottom-4 -left-4 glass rounded-xl p-3 border border-emerald-500/30 float-slow">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 bg-emerald-500/20 rounded-lg flex items-center justify-center">
                <i data-lucide="check-circle" class="w-4 h-4 text-emerald-500"></i>
              </div>
              <div>
                <div class="text-white text-xs font-bold">{{ 'hero.badge_growth' | t }}</div>
                <div class="text-gray-500 text-[10px]">{{ 'hero.badge_growth_label' | t }}</div>
              </div>
            </div>
          </div>

          <!-- Floating badge 2 -->
          <div class="absolute -top-4 -right-4 glass rounded-xl p-3 border border-orange-500/30 float">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 bg-orange-500/20 rounded-lg flex items-center justify-center">
                <i data-lucide="sparkles" class="w-4 h-4 text-orange-500"></i>
              </div>
              <div>
                <div class="text-white text-xs font-bold">{{ 'hero.badge_support' | t }}</div>
                <div class="text-gray-500 text-[10px]">{{ 'hero.badge_support_label' | t }}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": []
}
{% endschema %}
