{% comment %} Scrolling Text Section - Exact match to React ScrollingText.jsx {% endcomment %}

<section class="scrolling-section relative z-10">
  <div class="glass opacity-30" style="position: absolute; inset: 0;"></div>
  
  <div class="relative">
    <div class="scrolling-wrapper scroll-animation" style="display: flex; white-space: nowrap;">
      {% for i in (1..2) %}
        <div class="flex items-center">
          <div class="scrolling-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#f97316" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 0.5rem;"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/></svg>
            <span class="scrolling-item-highlight">{{ 'scrolling.expert' | t }}</span>
          </div>
          <span class="scrolling-dot">•</span>
          
          <div class="scrolling-item">
            <span class="scrolling-item-text">{{ 'scrolling.text' | t }}</span>
          </div>
          <span class="scrolling-dot">•</span>
          
          <div class="scrolling-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#f97316" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 0.5rem;"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/></svg>
            <span class="scrolling-item-highlight">{{ 'scrolling.stores' | t }}</span>
          </div>
          <span class="scrolling-dot">•</span>
          
          <div class="scrolling-item">
            <span class="scrolling-item-text">{{ 'scrolling.conversion' | t }}</span>
          </div>
          <span class="scrolling-dot">•</span>
          
          <div class="scrolling-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#f97316" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 0.5rem;"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/></svg>
            <span class="scrolling-item-highlight">{{ 'scrolling.revenue' | t }}</span>
          </div>
          <span class="scrolling-dot">•</span>
          
          <div class="scrolling-item">
            <span class="scrolling-item-text">{{ 'scrolling.clients' | t }}</span>
          </div>
          <span class="scrolling-dot">•</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

