{% comment %}
  Scrolling Text Section - Exact copy from React ScrollingText.jsx
{% endcomment %}

<section class="py-6 overflow-hidden relative z-10">
  <!-- Glass background -->
  <div class="absolute inset-0 glass opacity-30"></div>
  
  <!-- Top gradient line -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-orange-500/50 to-transparent"></div>
  
  <!-- Bottom gradient line -->
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-emerald-500/50 to-transparent"></div>
  
  <div class="relative">
    <div class="flex whitespace-nowrap scroll-animation">
      {% for i in (1..2) %}
        <div class="flex items-center">
          <!-- Item 1 - Highlight -->
          <div class="flex items-center mx-8">
            <i data-lucide="sparkles" class="w-5 h-5 text-orange-500 mr-2"></i>
            <span class="text-xl md:text-2xl font-bold text-orange-500 text-glow-orange">
              {{ 'scrolling.expert' | t }}
            </span>
            <span class="text-gray-600 mx-8">•</span>
          </div>
          
          <!-- Item 2 - Regular -->
          <div class="flex items-center mx-8">
            <span class="text-xl md:text-2xl font-semibold text-white/80">
              {{ 'scrolling.text' | t }}
            </span>
            <span class="text-gray-600 mx-8">•</span>
          </div>
          
          <!-- Item 3 - Highlight -->
          <div class="flex items-center mx-8">
            <i data-lucide="sparkles" class="w-5 h-5 text-orange-500 mr-2"></i>
            <span class="text-xl md:text-2xl font-bold text-orange-500 text-glow-orange">
              {{ 'scrolling.stores' | t }}
            </span>
            <span class="text-gray-600 mx-8">•</span>
          </div>
          
          <!-- Item 4 - Regular -->
          <div class="flex items-center mx-8">
            <span class="text-xl md:text-2xl font-semibold text-white/80">
              {{ 'scrolling.conversion' | t }}
            </span>
            <span class="text-gray-600 mx-8">•</span>
          </div>
          
          <!-- Item 5 - Highlight -->
          <div class="flex items-center mx-8">
            <i data-lucide="sparkles" class="w-5 h-5 text-orange-500 mr-2"></i>
            <span class="text-xl md:text-2xl font-bold text-orange-500 text-glow-orange">
              {{ 'scrolling.revenue' | t }}
            </span>
            <span class="text-gray-600 mx-8">•</span>
          </div>
          
          <!-- Item 6 - Regular -->
          <div class="flex items-center mx-8">
            <span class="text-xl md:text-2xl font-semibold text-white/80">
              {{ 'scrolling.satisfaction' | t }}
            </span>
            <span class="text-gray-600 mx-8">•</span>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Scrolling Text",
  "settings": []
}
{% endschema %}
