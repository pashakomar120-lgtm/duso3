{% comment %}
  Testimonials Section - Exact copy from React TestimonialsSection.jsx
{% endcomment %}

<section class="py-24 relative z-10">
  <div class="absolute inset-0 glass opacity-20"></div>
  
  <div class="max-w-7xl mx-auto px-6 relative">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="text-emerald-500 text-sm font-medium tracking-wider uppercase mb-4 block">
        {{ 'testimonials.section_title' | t }}
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
        {{ 'testimonials.title_1' | t }} <span class="text-orange-500 text-glow-orange">{{ 'testimonials.title_highlight' | t }}</span>
      </h2>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% assign testimonial_names = "Александр К.,Мария С.,Дмитрий П.,Елена В.,Сергей М.,Анна Т." | split: "," %}
      {% assign testimonial_roles = "CEO TechStore.ru,Founder FashionHub,CTO ElectroWorld,Marketing Director,E-commerce Manager,Product Owner" | split: "," %}
      {% assign testimonial_texts = "Команда превзошла все ожидания. За 3 недели создали магазин который генерирует $50K+ в месяц. Рекомендую всем!,Профессионалы своего дела. Миграция с WooCommerce прошла идеально без потери данных и позиций в поиске.,Shopify Plus интеграция была выполнена безупречно. Наша конверсия выросла на 180% после редизайна.,Отличная работа с рекламными кампаниями. ROI вырос в 3 раза за первые 2 месяца сотрудничества.,Быстро гибко и качественно. Уже запустили 3 проекта с командой и планируем продолжать.,Наконец-то нашли надёжного партнёра для e-commerce. Поддержка 24/7 это огромный плюс." | split: "," %}
      {% assign testimonial_ratings = "5,5,5,5,5,5" | split: "," %}
      
      {% for i in (0..5) %}
        <div 
          data-testid="testimonial-{{ i }}"
          class="floating-card rounded-2xl p-6 hover:border-orange-500/30 transition-all duration-300"
        >
          <!-- Stars -->
          <div class="flex gap-1 mb-4">
            {% for star in (1..5) %}
              <i data-lucide="star" class="w-4 h-4 text-orange-500 fill-orange-500"></i>
            {% endfor %}
          </div>
          
          <!-- Text -->
          <p class="text-gray-300 text-sm mb-6 leading-relaxed">
            "{{ testimonial_texts[i] }}"
          </p>
          
          <!-- Author -->
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br {% cycle 'from-orange-500 to-pink-500', 'from-emerald-500 to-cyan-500', 'from-purple-500 to-blue-500', 'from-pink-500 to-orange-500', 'from-cyan-500 to-emerald-500', 'from-blue-500 to-purple-500' %} flex items-center justify-center text-white font-bold text-sm">
              {{ testimonial_names[i] | slice: 0 }}
            </div>
            <div>
              <div class="text-white font-medium text-sm">{{ testimonial_names[i] }}</div>
              <div class="text-gray-500 text-xs">{{ testimonial_roles[i] }}</div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": []
}
{% endschema %}
