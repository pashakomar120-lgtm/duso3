      {% assign case_descriptions = "–ü–æ–ª–Ω–∞—è —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∞ –ø—Ä–µ–º–∏–∞–ª—å–Ω–æ–≥–æ –º–∞–≥–∞–∑–∏–Ω–∞ —ç–ª–µ–∫—Ç—Ä–æ–Ω–∏–∫–∏ —Å –∏–Ω—Ç–µ–≥—Ä–∞—Ü–∏–µ–π AI-—Ä–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏–π.,–†–µ–¥–∏–∑–∞–π–Ω –∏ –º–∏–≥—Ä–∞—Ü–∏—è –Ω–∞ Shopify Plus —Å —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ–º SEO-–ø–æ–∑–∏—Ü–∏–π.,–†–µ–±—Ä–µ–Ω–¥–∏–Ω–≥ –∏ —Å–æ–∑–¥–∞–Ω–∏–µ –º—É–ª—å—Ç–∏—Ä–µ–≥–∏–æ–Ω–∞–ª—å–Ω–æ–≥–æ –º–∞–≥–∞–∑–∏–Ω–∞.,–ó–∞–ø—É—Å–∫ –ø–æ–¥–ø–∏—Å–æ—á–Ω–æ–π –º–æ–¥–µ–ª–∏ –∏ –ø—Ä–æ–≥—Ä–∞–º–º—ã –ª–æ—è–ª—å–Ω–æ—Å—Ç–∏.,–ë—ã—Å—Ç—Ä—ã–π –∑–∞–ø—É—Å–∫ –º–∞–≥–∞–∑–∏–Ω–∞ —Å–ø–æ—Ä—Ç–∏–≤–Ω–æ–≥–æ –ø–∏—Ç–∞–Ω–∏—è –∑–∞ 3 –Ω–µ–¥–µ–ª–∏.,–°–æ–∑–¥–∞–Ω–∏–µ D2C –±—Ä–µ–Ω–¥–∞ —Å –Ω—É–ª—è –∏ –≤—ã—Ö–æ–¥ –Ω–∞ –º–∞—Ä–∫–µ—Ç–ø–ª–µ–π—Å—ã." | split: "," %}
      {% assign case_images = "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800,https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=800,https://images.unsplash.com/photo-1498049794561-7780e7231661?w=800,https://images.unsplash.com/photo-1596462502278-27bfdc403348?w=800,https://images.unsplash.com/photo-1517836357463-d25dfeac3438?w=800,https://images.unsplash.com/photo-1556909114-f6e7ad7d3136?w=800" | split: "," %}
      {% assign case_flags = "üá∑üá∫,üá∫üá¶,üá∞üáø,üáßüáæ,üá∑üá∫,üá∫üá¶" | split: "," %}
      
      {% for i in (0..5) %}
        <div 
          data-testid="case-study-{{ i }}"
          class="floating-card rounded-2xl overflow-hidden group hover:border-orange-500/30 transition-all duration-300 cursor-pointer"
        >
          <!-- Image -->
          <div class="relative h-48 overflow-hidden">
            <img 
              src="{{ case_images[i] }}" 
              alt="{{ case_titles[i] }}"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="lazy"
            >
            <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0b] via-transparent to-transparent"></div>
            
            <!-- Category badge -->
            <div class="absolute top-4 left-4">
              <span class="glass rounded-full px-3 py-1 text-xs font-medium text-white border border-white/10">
                {{ case_categories[i] }}
              </span>
            </div>
            
            <!-- Flag -->
            <div class="absolute top-4 right-4 text-2xl">
              {{ case_flags[i] }}
            </div>
          </div>
          
          <!-- Content -->
          <div class="p-5">
            <h3 class="text-lg font-bold text-white mb-2 group-hover:text-orange-500 transition-colors">
              {{ case_titles[i] }}
            </h3>
            <p class="text-gray-400 text-sm mb-4 line-clamp-2">
              {{ case_descriptions[i] }}
            </p>
            
            <!-- Result -->
            <div class="flex items-center justify-between">
              <span class="text-emerald-500 font-bold text-lg">{{ case_results[i] }}</span>
              <i data-lucide="arrow-right" class="w-5 h-5 text-gray-500 group-hover:text-orange-500 group-hover:translate-x-2 transition-all"></i>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a
        href="/pages/portfolio"
        data-testid="case-studies-view-all"
        class="bg-gradient-to-r from-orange-500 to-orange-600 text-white hover:from-orange-600 hover:to-orange-700 px-8 py-4 rounded-xl shadow-lg shadow-orange-500/25 inline-flex items-center gap-2 transition-all duration-300 hover:scale-105"
      >
        {{ 'case_studies.view_all' | t }}
        <i data-lucide="arrow-right" class="w-5 h-5"></i>
      </a>
    </div>
  </div>
</section>

