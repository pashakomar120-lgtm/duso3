<section id="portfolio" class="py-24 relative z-10">
  <div class="absolute inset-0 glass opacity-20"></div>
  
  <div class="max-w-7xl mx-auto px-6 relative">
    <!-- Header -->
    <div class="text-center mb-16">
      <span class="text-emerald-500 text-sm font-medium tracking-wider uppercase mb-4 block">
        {{ 'case_studies.section_title' | t }}
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
        <span class="text-orange-500 text-glow-orange">{{ 'case_studies.title_highlight' | t }}</span> {{ 'case_studies.title' | t }}
      </h2>
    </div>

    <!-- Case Studies Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% assign case_titles = "TechStore Premium,FashionHub Luxury,ElectroWorld Rebrand,BeautyPro Expansion,SportMax Launch,HomeStyle D2C" | split: "," %}
      {% assign case_categories = "E-commerce,Fashion,Electronics,Beauty,Sports,Home & Living" | split: "," %}
