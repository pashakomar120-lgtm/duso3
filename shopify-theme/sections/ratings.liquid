{% comment %}
  Ratings Section - Exact copy from React RatingsSection.jsx
{% endcomment %}

<section id="about" class="bg-[#0a0a0b] py-16">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Title -->
    <h2 class="text-3xl md:text-4xl font-bold text-white text-center mb-12">
      {{ 'ratings.title' | t }}
    </h2>

    <!-- Ratings Row -->
    <div class="flex flex-wrap justify-center gap-8">
      <div class="flex items-center gap-3 bg-[#111827] px-6 py-4 rounded-full hover:bg-[#1e293b] transition-colors duration-300 cursor-pointer">
        <i data-lucide="star" class="w-6 h-6 text-[#f97316]"></i>
        <span class="text-white text-sm md:text-base">
          {{ 'ratings.rating_1' | t }}
          <span class="text-[#10b981] font-semibold">Shopify</span>
        </span>
      </div>
      
      <div class="flex items-center gap-3 bg-[#111827] px-6 py-4 rounded-full hover:bg-[#1e293b] transition-colors duration-300 cursor-pointer">
        <i data-lucide="trophy" class="w-6 h-6 text-[#f97316]"></i>
        <span class="text-white text-sm md:text-base">
          {{ 'ratings.rating_2' | t }}
          <span class="text-[#10b981] font-semibold">Clutch</span>
        </span>
      </div>
      
      <div class="flex items-center gap-3 bg-[#111827] px-6 py-4 rounded-full hover:bg-[#1e293b] transition-colors duration-300 cursor-pointer">
        <i data-lucide="award" class="w-6 h-6 text-[#f97316]"></i>
        <span class="text-white text-sm md:text-base">
          {{ 'ratings.rating_3' | t }}
          <span class="text-[#10b981] font-semibold">GoodFirms</span>
        </span>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Ratings",
  "settings": []
}
{% endschema %}
