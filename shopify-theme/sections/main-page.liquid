{% comment %} Main Page Section - For generic pages {% endcomment %}

<section class="pt-24 sm:pt-32 pb-16 relative overflow-hidden min-h-screen">
  <div class="container">
    <article class="page">
      <header class="page-header mb-8 text-center">
        <h1 class="hero-title text-white mb-4">{{ page.title }}</h1>
      </header>
      <div class="page-content text-gray-300 prose prose-invert max-w-4xl mx-auto">
        {{ page.content }}
      </div>
    </article>
  </div>
</section>

<style>
.prose {
  color: var(--color-gray-300);
  line-height: 1.8;
}

.prose h2 {
  color: var(--color-white);
  font-size: 1.875rem;
  font-weight: 700;
  margin-top: 3rem;
  margin-bottom: 1.5rem;
}

.prose h3 {
  color: var(--color-white);
  font-size: 1.5rem;
  font-weight: 600;
  margin-top: 2rem;
  margin-bottom: 1rem;
}

.prose p {
  margin-bottom: 1.5rem;
}

.prose a {
  color: var(--color-orange);
  text-decoration: underline;
}

.prose a:hover {
  color: var(--color-emerald);
}

.prose ul, .prose ol {
  margin-bottom: 1.5rem;
  padding-left: 1.5rem;
}

.prose li {
  margin-bottom: 0.5rem;
}

.prose strong {
  color: var(--color-white);
}

.prose blockquote {
  border-left: 4px solid var(--color-orange);
  padding-left: 1rem;
  margin: 1.5rem 0;
  font-style: italic;
  color: var(--color-gray-400);
}
</style>

{% schema %}
{
  "name": "Main Page",
  "settings": []
}
{% endschema %}
