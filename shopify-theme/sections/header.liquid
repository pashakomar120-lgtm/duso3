{% comment %}
  Header Section - Exact copy from React Header.jsx
{% endcomment %}

<header
  id="main-header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-500 bg-transparent"
  data-testid="main-header"
>
  <!-- Top bar with achievements - hidden on mobile -->
  <div id="header-topbar" class="hidden sm:block border-b border-white/5 transition-all duration-300 py-2">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 flex items-center justify-between">
      <div class="flex items-center gap-3 sm:gap-6 overflow-x-auto hide-scrollbar">
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="zap" class="w-3 h-3 sm:w-4 sm:h-4 text-orange-500"></i>
          <span class="text-gray-400 text-[10px] sm:text-xs font-medium">{{ 'header.stores_count' | t }}</span>
        </div>
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="globe" class="w-3 h-3 sm:w-4 sm:h-4 text-emerald-500"></i>
          <span class="text-gray-400 text-[10px] sm:text-xs font-medium">{{ 'header.countries_count' | t }}</span>
        </div>
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="award" class="w-3 h-3 sm:w-4 sm:h-4 text-orange-500"></i>
          <span class="text-gray-400 text-[10px] sm:text-xs font-medium">{{ 'header.partner_title' | t }}</span>
        </div>
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="trending-up" class="w-3 h-3 sm:w-4 sm:h-4 text-emerald-500"></i>
          <span class="text-gray-400 text-[10px] sm:text-xs font-medium">{{ 'header.revenue' | t }}</span>
        </div>
      </div>
      <div class="hidden md:flex items-center gap-2">
        <span class="text-gray-500 text-xs">{{ 'general.cis_countries' | t }}:</span>
        <div class="flex items-center gap-1">
          {% assign cis_flags = "ru,ua,kz,by,uz,az,ge,am" | split: "," %}
          {% assign cis_names = "Россия,Украина,Казахстан,Беларусь,Узбекистан,Азербайджан,Грузия,Армения" | split: "," %}
          {% for i in (0..7) %}
            <img 
              src="https://flagcdn.com/w20/{{ cis_flags[i] }}.png"
              alt="{{ cis_names[i] }}"
              title="{{ cis_names[i] }}"
              class="w-5 h-3 object-cover rounded-sm shadow-sm hover:scale-125 transition-transform cursor-pointer"
              loading="lazy"
            >
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-2 sm:py-3">
    <div class="flex items-center justify-between">
      <!-- Logo with glow -->
      <a href="/" class="flex items-center gap-2 group" data-testid="logo">
        <div class="text-xl sm:text-2xl font-bold text-white tracking-tight transition-all duration-300 group-hover:scale-105">
          <span class="text-orange-500 text-glow-orange">duso</span>_ecom
        </div>
        <div class="flex flex-col items-start">
          <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></div>
          <span class="text-[8px] text-emerald-500 mt-0.5 font-medium">#1 СНГ</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1">
        {% assign nav_items = "Главная|/,О нас|/pages/about,Услуги|/pages/services,Портфолио|/pages/portfolio,Ресурсы|/pages/resources,Контакты|/pages/contact" | split: "," %}
        
        {% for nav_item in nav_items %}
          {% assign item_parts = nav_item | split: "|" %}
          {% assign item_label = item_parts[0] %}
          {% assign item_href = item_parts[1] %}
          
          <div class="relative group">
            <a
              href="{{ item_href }}"
              data-testid="nav-{{ item_href | replace: '/', '' | replace: 'pages', '' | default: 'home' }}"
              class="relative px-4 py-2 rounded-lg transition-all duration-300 text-sm font-medium flex items-center gap-1 text-gray-400 hover:text-white"
            >
              {{ item_label }}
              {% if item_href == '/pages/services' %}
                <i data-lucide="chevron-down" class="w-4 h-4 transition-transform duration-300 group-hover:rotate-180"></i>
              {% endif %}
              <span class="absolute inset-0 rounded-lg bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity"></span>
            </a>

            <!-- Services Dropdown -->
            {% if item_href == '/pages/services' %}
              <div class="absolute top-full left-0 pt-2 transition-all duration-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible">
                <div class="w-[600px] glass-strong rounded-2xl border border-white/10 shadow-2xl p-4 grid grid-cols-2 gap-2">
                  {% assign service_titles = "Shopify магазин,Структура и дизайн,Платёжные системы,Оптимизация сайта,Таргетированная реклама,Доставка и отправка,SEO продвижение,Email маркетинг" | split: "," %}
                  {% assign service_icons = "shopping-cart,palette,credit-card,zap,target,truck,search,mail" | split: "," %}
                  {% assign service_prices = "от $2,500,от $3,000,от $500,от $800,от $1,500/мес,от $700,от $1,000/мес,от $500/мес" | split: "," %}
                  
                  {% for i in (0..7) %}
                    <a
                      href="/pages/services"
                      class="flex items-start gap-3 p-3 rounded-xl hover:bg-white/5 transition-all group/item"
                    >
                      <div class="w-10 h-10 rounded-lg bg-orange-500/10 flex items-center justify-center flex-shrink-0 group-hover/item:bg-orange-500/20 transition-colors">
                        <i data-lucide="{{ service_icons[i] }}" class="w-5 h-5 text-orange-500"></i>
                      </div>
                      <div>
                        <div class="text-white font-medium text-sm group-hover/item:text-orange-500 transition-colors">
                          {{ service_titles[i] }}
                        </div>
                        <div class="text-gray-500 text-xs">
                          {{ service_prices[i] }}
                        </div>
                      </div>
                    </a>
                  {% endfor %}
                  
                  <div class="col-span-2 pt-3 mt-2 border-t border-white/5">
                    <a 
                      href="/pages/services" 
                      class="flex items-center justify-center gap-2 text-orange-500 hover:text-white text-sm font-medium transition-colors"
                    >
                      {{ 'header.all_services' | t }}
                      <i data-lucide="arrow-right" class="w-4 h-4"></i>
                    </a>
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </nav>

      <!-- CTA Buttons -->
      <div class="hidden lg:flex items-center gap-3">
        <a
          href="/pages/portfolio"
          class="text-gray-400 hover:text-white hover:bg-white/5 px-4 py-2 rounded-lg transition-all duration-300 text-sm font-medium"
          data-testid="header-portfolio-btn"
        >
          {{ 'header.our_works' | t }}
        </a>
        <a
          href="/pages/contact"
          data-testid="header-cta"
          class="bg-gradient-to-r from-orange-500 to-orange-600 text-white hover:from-orange-600 hover:to-orange-700 transition-all duration-300 px-6 py-2.5 shadow-lg shadow-orange-500/25 hover:shadow-orange-500/40 hover:scale-105 rounded-xl btn-glow text-sm font-medium inline-flex items-center gap-2"
        >
          {{ 'header.free_consultation' | t }}
          <i data-lucide="arrow-right" class="w-4 h-4"></i>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="lg:hidden text-white p-2 glass rounded-lg border border-white/10 hover:border-orange-500/50 transition-all"
        onclick="toggleMobileMenu()"
        data-testid="mobile-menu-toggle"
        id="mobile-menu-btn"
      >
        <i data-lucide="menu" class="w-6 h-6" id="menu-icon"></i>
        <i data-lucide="x" class="w-6 h-6 hidden" id="close-menu-icon"></i>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="lg:hidden mt-4 pb-4 border-t border-white/10 pt-4 fade-in-up hidden">
      <nav class="flex flex-col gap-2">
        {% for nav_item in nav_items %}
          {% assign item_parts = nav_item | split: "|" %}
          {% assign item_label = item_parts[0] %}
          {% assign item_href = item_parts[1] %}
          
          <a
            href="{{ item_href }}"
            class="p-3 rounded-xl transition-all duration-300 text-sm font-medium text-gray-400 hover:bg-white/5 hover:text-white"
          >
            {{ item_label }}
          </a>
        {% endfor %}
        
        <div class="mt-4 pt-4 border-t border-white/10 space-y-3">
          <div class="flex items-center gap-2 justify-center flex-wrap">
            {% for i in (0..7) %}
              <img 
                src="https://flagcdn.com/w20/{{ cis_flags[i] }}.png"
                alt="{{ cis_names[i] }}"
                title="{{ cis_names[i] }}"
                class="w-6 h-4 object-cover rounded-sm shadow-sm"
                loading="lazy"
              >
            {% endfor %}
          </div>
          <a
            href="/pages/contact"
            class="bg-gradient-to-r from-orange-500 to-orange-600 text-white hover:from-orange-600 hover:to-orange-700 w-full py-4 rounded-xl shadow-lg shadow-orange-500/25 text-sm font-medium flex items-center justify-center gap-2"
          >
            {{ 'header.free_consultation' | t }}
            <i data-lucide="arrow-right" class="w-4 h-4"></i>
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
// Header scroll effect
let lastScroll = 0;
window.addEventListener('scroll', function() {
  const header = document.getElementById('main-header');
  const topbar = document.getElementById('header-topbar');
  const scrolled = window.scrollY > 50;
  
  if (scrolled) {
    header.classList.add('glass-strong', 'border-b', 'border-white/5', 'shadow-2xl');
    header.classList.remove('bg-transparent');
    if (topbar) topbar.classList.replace('py-2', 'py-1');
  } else {
    header.classList.remove('glass-strong', 'border-b', 'border-white/5', 'shadow-2xl');
    header.classList.add('bg-transparent');
    if (topbar) topbar.classList.replace('py-1', 'py-2');
  }
  
  lastScroll = window.scrollY;
});

// Mobile menu toggle
function toggleMobileMenu() {
  const menu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-menu-icon');
  
  if (menu.classList.contains('hidden')) {
    menu.classList.remove('hidden');
    menuIcon.classList.add('hidden');
    closeIcon.classList.remove('hidden');
  } else {
    menu.classList.add('hidden');
    menuIcon.classList.remove('hidden');
    closeIcon.classList.add('hidden');
  }
  
  if (typeof lucide !== 'undefined') {
    lucide.createIcons();
  }
}
</script>

