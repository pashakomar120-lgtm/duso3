<header
  id="main-header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-500"
  style="background: transparent;"
  data-testid="main-header"
>
  <!-- Top bar with achievements -->
  <div id="header-topbar" class="hidden sm:block transition-all duration-300 py-2" style="border-bottom: 1px solid rgba(255,255,255,0.05);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 flex items-center justify-between">
      <div class="flex items-center gap-3 sm:gap-6 overflow-x-auto hide-scrollbar">
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="zap" class="w-3 h-3 sm:w-4 sm:h-4" style="color: #f97316;"></i>
          <span class="text-gray-400 text-xs font-medium">6500+ магазинов</span>
        </div>
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="globe" class="w-3 h-3 sm:w-4 sm:h-4" style="color: #10b981;"></i>
          <span class="text-gray-400 text-xs font-medium">8 стран СНГ</span>
        </div>
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="award" class="w-3 h-3 sm:w-4 sm:h-4" style="color: #f97316;"></i>
          <span class="text-gray-400 text-xs font-medium">#1 Shopify Partner</span>
        </div>
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="trending-up" class="w-3 h-3 sm:w-4 sm:h-4" style="color: #10b981;"></i>
          <span class="text-gray-400 text-xs font-medium">$3B+ оборот</span>
        </div>
      </div>
      <div class="hidden md:flex items-center gap-2">
        <span class="text-gray-500 text-xs">Весь СНГ:</span>
        <div class="flex items-center gap-1">
          <img src="https://flagcdn.com/w20/ru.png" alt="RU" class="w-5 h-3 object-cover rounded-sm">
          <img src="https://flagcdn.com/w20/ua.png" alt="UA" class="w-5 h-3 object-cover rounded-sm">
          <img src="https://flagcdn.com/w20/kz.png" alt="KZ" class="w-5 h-3 object-cover rounded-sm">
          <img src="https://flagcdn.com/w20/by.png" alt="BY" class="w-5 h-3 object-cover rounded-sm">
          <img src="https://flagcdn.com/w20/uz.png" alt="UZ" class="w-5 h-3 object-cover rounded-sm">
          <img src="https://flagcdn.com/w20/az.png" alt="AZ" class="w-5 h-3 object-cover rounded-sm">
          <img src="https://flagcdn.com/w20/ge.png" alt="GE" class="w-5 h-3 object-cover rounded-sm">
          <img src="https://flagcdn.com/w20/am.png" alt="AM" class="w-5 h-3 object-cover rounded-sm">
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-2 sm:py-3">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group" data-testid="logo">
        <div class="text-xl sm:text-2xl font-bold text-white tracking-tight transition-all duration-300 group-hover:scale-105">
          <span style="color: #f97316;" class="text-glow-orange">duso</span>_ecom
        </div>
        <div class="flex flex-col items-start">
          <div style="width: 8px; height: 8px; background: #10b981; border-radius: 50%;" class="animate-pulse"></div>
          <span style="color: #10b981;" class="text-xs mt-0.5 font-medium">#1 СНГ</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1">
        <a href="/" class="px-4 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white transition-colors">Главная</a>
        <a href="/pages/about" class="px-4 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white transition-colors">О нас</a>
        <a href="/pages/services" class="px-4 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white transition-colors">Услуги</a>
        <a href="/pages/portfolio" class="px-4 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white transition-colors">Портфолио</a>
        <a href="/pages/contact" class="px-4 py-2 rounded-lg text-sm font-medium text-gray-400 hover:text-white transition-colors">Контакты</a>
      </nav>

      <!-- CTA Buttons -->
      <div class="hidden lg:flex items-center gap-3">
        <a href="/pages/portfolio" class="text-gray-400 hover:text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">Наши работы</a>
        <a href="/pages/contact" data-testid="header-cta" class="px-6 py-2.5 rounded-xl text-sm font-medium text-white transition-all duration-300 hover:scale-105 btn-glow flex items-center gap-2" style="background: linear-gradient(to right, #f97316, #ea580c);">
          Бесплатная консультация
          <i data-lucide="arrow-right" class="w-4 h-4"></i>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="lg:hidden text-white p-2 glass rounded-lg" onclick="toggleMobileMenu()" id="mobile-menu-btn">
        <i data-lucide="menu" class="w-6 h-6" id="menu-icon"></i>
        <i data-lucide="x" class="w-6 h-6 hidden" id="close-menu-icon"></i>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="lg:hidden mt-4 pb-4 pt-4 hidden" style="border-top: 1px solid rgba(255,255,255,0.1);">
      <nav class="flex flex-col gap-2">
        <a href="/" class="p-3 rounded-xl text-sm font-medium text-gray-400 hover:text-white transition-colors">Главная</a>
        <a href="/pages/about" class="p-3 rounded-xl text-sm font-medium text-gray-400 hover:text-white transition-colors">О нас</a>
        <a href="/pages/services" class="p-3 rounded-xl text-sm font-medium text-gray-400 hover:text-white transition-colors">Услуги</a>
        <a href="/pages/portfolio" class="p-3 rounded-xl text-sm font-medium text-gray-400 hover:text-white transition-colors">Портфолио</a>
        <a href="/pages/contact" class="p-3 rounded-xl text-sm font-medium text-gray-400 hover:text-white transition-colors">Контакты</a>
        <div class="mt-4 pt-4" style="border-top: 1px solid rgba(255,255,255,0.1);">
          <a href="/pages/contact" class="w-full py-4 rounded-xl text-sm font-medium text-white flex items-center justify-center gap-2" style="background: linear-gradient(to right, #f97316, #ea580c);">
            Бесплатная консультация
            <i data-lucide="arrow-right" class="w-4 h-4"></i>
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": []
}
{% endschema %}
