<header
  id="main-header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-500 bg-transparent"
  data-testid="main-header"
>
  <!-- Top bar with achievements -->
  <div id="header-topbar" class="hidden sm:block border-b border-white/5 transition-all duration-300 py-2">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 flex items-center justify-between">
      <div class="flex items-center gap-3 sm:gap-6 overflow-x-auto hide-scrollbar">
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="zap" class="w-3 h-3 sm:w-4 sm:h-4 text-orange-500"></i>
          <span class="text-gray-400 text-[10px] sm:text-xs font-medium">6500+ магазинов</span>
        </div>
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="globe" class="w-3 h-3 sm:w-4 sm:h-4 text-emerald-500"></i>
          <span class="text-gray-400 text-[10px] sm:text-xs font-medium">8 стран СНГ</span>
        </div>
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="award" class="w-3 h-3 sm:w-4 sm:h-4 text-orange-500"></i>
          <span class="text-gray-400 text-[10px] sm:text-xs font-medium">#1 Shopify Partner</span>
        </div>
        <div class="flex items-center gap-1 sm:gap-2 whitespace-nowrap">
          <i data-lucide="trending-up" class="w-3 h-3 sm:w-4 sm:h-4 text-emerald-500"></i>
          <span class="text-gray-400 text-[10px] sm:text-xs font-medium">$3B+ оборот</span>
        </div>
      </div>
      <div class="hidden md:flex items-center gap-2">
        <span class="text-gray-500 text-xs">Весь СНГ:</span>
        <div class="flex items-center gap-1">
          <img src="https://flagcdn.com/w20/ru.png" alt="Россия" title="Россия" class="w-5 h-3 object-cover rounded-sm shadow-sm hover:scale-125 transition-transform cursor-pointer">
          <img src="https://flagcdn.com/w20/ua.png" alt="Украина" title="Украина" class="w-5 h-3 object-cover rounded-sm shadow-sm hover:scale-125 transition-transform cursor-pointer">
          <img src="https://flagcdn.com/w20/kz.png" alt="Казахстан" title="Казахстан" class="w-5 h-3 object-cover rounded-sm shadow-sm hover:scale-125 transition-transform cursor-pointer">
          <img src="https://flagcdn.com/w20/by.png" alt="Беларусь" title="Беларусь" class="w-5 h-3 object-cover rounded-sm shadow-sm hover:scale-125 transition-transform cursor-pointer">
          <img src="https://flagcdn.com/w20/uz.png" alt="Узбекистан" title="Узбекистан" class="w-5 h-3 object-cover rounded-sm shadow-sm hover:scale-125 transition-transform cursor-pointer">
          <img src="https://flagcdn.com/w20/az.png" alt="Азербайджан" title="Азербайджан" class="w-5 h-3 object-cover rounded-sm shadow-sm hover:scale-125 transition-transform cursor-pointer">
          <img src="https://flagcdn.com/w20/ge.png" alt="Грузия" title="Грузия" class="w-5 h-3 object-cover rounded-sm shadow-sm hover:scale-125 transition-transform cursor-pointer">
          <img src="https://flagcdn.com/w20/am.png" alt="Армения" title="Армения" class="w-5 h-3 object-cover rounded-sm shadow-sm hover:scale-125 transition-transform cursor-pointer">
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-2 sm:py-3">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group" data-testid="logo">
        <div class="text-xl sm:text-2xl font-bold text-white tracking-tight transition-all duration-300 group-hover:scale-105">
          <span class="text-orange-500 text-glow-orange">duso</span>_ecom
        </div>
        <div class="flex flex-col items-start">
          <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></div>
          <span class="text-[8px] text-emerald-500 mt-0.5 font-medium">#1 СНГ</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1">
        <a href="/" class="relative px-4 py-2 rounded-lg transition-all duration-300 text-sm font-medium text-gray-400 hover:text-white group">
          Главная
          <span class="absolute inset-0 rounded-lg bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity"></span>
        </a>
        <a href="/pages/about" class="relative px-4 py-2 rounded-lg transition-all duration-300 text-sm font-medium text-gray-400 hover:text-white group">
          О нас
          <span class="absolute inset-0 rounded-lg bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity"></span>
        </a>
        <div class="relative group">
          <a href="/pages/services" class="relative px-4 py-2 rounded-lg transition-all duration-300 text-sm font-medium text-gray-400 hover:text-white flex items-center gap-1">
            Услуги
            <i data-lucide="chevron-down" class="w-4 h-4 transition-transform duration-300 group-hover:rotate-180"></i>
            <span class="absolute inset-0 rounded-lg bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity"></span>
          </a>
          <!-- Services Dropdown -->
          <div class="absolute top-full left-0 pt-2 transition-all duration-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible">
            <div class="w-[600px] glass-strong rounded-2xl border border-white/10 shadow-2xl p-4 grid grid-cols-2 gap-2">
              <a href="/pages/services" class="flex items-start gap-3 p-3 rounded-xl hover:bg-white/5 transition-all group/item">
                <div class="w-10 h-10 rounded-lg bg-orange-500/10 flex items-center justify-center flex-shrink-0 group-hover/item:bg-orange-500/20 transition-colors">
                  <i data-lucide="shopping-cart" class="w-5 h-5 text-orange-500"></i>
                </div>
                <div>
                  <div class="text-white font-medium text-sm group-hover/item:text-orange-500 transition-colors">Shopify магазин</div>
                  <div class="text-gray-500 text-xs">от $2,500</div>
                </div>
              </a>
              <a href="/pages/services" class="flex items-start gap-3 p-3 rounded-xl hover:bg-white/5 transition-all group/item">
                <div class="w-10 h-10 rounded-lg bg-orange-500/10 flex items-center justify-center flex-shrink-0 group-hover/item:bg-orange-500/20 transition-colors">
                  <i data-lucide="palette" class="w-5 h-5 text-orange-500"></i>
                </div>
                <div>
                  <div class="text-white font-medium text-sm group-hover/item:text-orange-500 transition-colors">Дизайн магазина</div>
                  <div class="text-gray-500 text-xs">от $3,000</div>
                </div>
              </a>
              <a href="/pages/services" class="flex items-start gap-3 p-3 rounded-xl hover:bg-white/5 transition-all group/item">
                <div class="w-10 h-10 rounded-lg bg-orange-500/10 flex items-center justify-center flex-shrink-0 group-hover/item:bg-orange-500/20 transition-colors">
                  <i data-lucide="credit-card" class="w-5 h-5 text-orange-500"></i>
                </div>
                <div>
                  <div class="text-white font-medium text-sm group-hover/item:text-orange-500 transition-colors">Платёжные системы</div>
                  <div class="text-gray-500 text-xs">от $500</div>
                </div>
              </a>
              <a href="/pages/services" class="flex items-start gap-3 p-3 rounded-xl hover:bg-white/5 transition-all group/item">
                <div class="w-10 h-10 rounded-lg bg-orange-500/10 flex items-center justify-center flex-shrink-0 group-hover/item:bg-orange-500/20 transition-colors">
                  <i data-lucide="zap" class="w-5 h-5 text-orange-500"></i>
                </div>
                <div>
                  <div class="text-white font-medium text-sm group-hover/item:text-orange-500 transition-colors">Оптимизация</div>
                  <div class="text-gray-500 text-xs">от $800</div>
                </div>
              </a>
              <a href="/pages/services" class="flex items-start gap-3 p-3 rounded-xl hover:bg-white/5 transition-all group/item">
                <div class="w-10 h-10 rounded-lg bg-orange-500/10 flex items-center justify-center flex-shrink-0 group-hover/item:bg-orange-500/20 transition-colors">
                  <i data-lucide="target" class="w-5 h-5 text-orange-500"></i>
                </div>
                <div>
                  <div class="text-white font-medium text-sm group-hover/item:text-orange-500 transition-colors">Реклама</div>
                  <div class="text-gray-500 text-xs">от $1,500/мес</div>
                </div>
              </a>
              <a href="/pages/services" class="flex items-start gap-3 p-3 rounded-xl hover:bg-white/5 transition-all group/item">
                <div class="w-10 h-10 rounded-lg bg-orange-500/10 flex items-center justify-center flex-shrink-0 group-hover/item:bg-orange-500/20 transition-colors">
                  <i data-lucide="truck" class="w-5 h-5 text-orange-500"></i>
                </div>
                <div>
                  <div class="text-white font-medium text-sm group-hover/item:text-orange-500 transition-colors">Доставка</div>
                  <div class="text-gray-500 text-xs">от $700</div>
                </div>
              </a>
              <div class="col-span-2 pt-3 mt-2 border-t border-white/5">
                <a href="/pages/services" class="flex items-center justify-center gap-2 text-orange-500 hover:text-white text-sm font-medium transition-colors">
                  Все 13 услуг
                  <i data-lucide="arrow-right" class="w-4 h-4"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <a href="/pages/portfolio" class="relative px-4 py-2 rounded-lg transition-all duration-300 text-sm font-medium text-gray-400 hover:text-white group">
          Портфолио
          <span class="absolute inset-0 rounded-lg bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity"></span>
        </a>
        <a href="/pages/resources" class="relative px-4 py-2 rounded-lg transition-all duration-300 text-sm font-medium text-gray-400 hover:text-white group">
          Ресурсы
          <span class="absolute inset-0 rounded-lg bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity"></span>
        </a>
        <a href="/pages/contact" class="relative px-4 py-2 rounded-lg transition-all duration-300 text-sm font-medium text-gray-400 hover:text-white group">
          Контакты
          <span class="absolute inset-0 rounded-lg bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity"></span>
        </a>
      </nav>

      <!-- CTA Buttons -->
      <div class="hidden lg:flex items-center gap-3">
        <a href="/pages/portfolio" class="text-gray-400 hover:text-white hover:bg-white/5 px-4 py-2 rounded-lg transition-all duration-300 text-sm font-medium" data-testid="header-portfolio-btn">
          Наши работы
        </a>
        <a href="/pages/contact" data-testid="header-cta" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white hover:from-orange-600 hover:to-orange-700 transition-all duration-300 px-6 py-2.5 shadow-lg shadow-orange-500/25 hover:shadow-orange-500/40 hover:scale-105 rounded-xl btn-glow text-sm font-medium inline-flex items-center gap-2">
          Бесплатная консультация
          <i data-lucide="arrow-right" class="w-4 h-4"></i>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="lg:hidden text-white p-2 glass rounded-lg border border-white/10 hover:border-orange-500/50 transition-all" onclick="toggleMobileMenu()" data-testid="mobile-menu-toggle" id="mobile-menu-btn">
        <i data-lucide="menu" class="w-6 h-6" id="menu-icon"></i>
        <i data-lucide="x" class="w-6 h-6 hidden" id="close-menu-icon"></i>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="lg:hidden mt-4 pb-4 border-t border-white/10 pt-4 fade-in-up hidden">
      <nav class="flex flex-col gap-2">
        <a href="/" class="p-3 rounded-xl transition-all duration-300 text-sm font-medium text-gray-400 hover:bg-white/5 hover:text-white">Главная</a>
        <a href="/pages/about" class="p-3 rounded-xl transition-all duration-300 text-sm font-medium text-gray-400 hover:bg-white/5 hover:text-white">О нас</a>
        <a href="/pages/services" class="p-3 rounded-xl transition-all duration-300 text-sm font-medium text-gray-400 hover:bg-white/5 hover:text-white">Услуги</a>
        <a href="/pages/portfolio" class="p-3 rounded-xl transition-all duration-300 text-sm font-medium text-gray-400 hover:bg-white/5 hover:text-white">Портфолио</a>
        <a href="/pages/resources" class="p-3 rounded-xl transition-all duration-300 text-sm font-medium text-gray-400 hover:bg-white/5 hover:text-white">Ресурсы</a>
        <a href="/pages/contact" class="p-3 rounded-xl transition-all duration-300 text-sm font-medium text-gray-400 hover:bg-white/5 hover:text-white">Контакты</a>
        <div class="mt-4 pt-4 border-t border-white/10 space-y-3">
          <div class="flex items-center gap-2 justify-center flex-wrap">
            <img src="https://flagcdn.com/w20/ru.png" alt="Россия" class="w-6 h-4 object-cover rounded-sm shadow-sm">
            <img src="https://flagcdn.com/w20/ua.png" alt="Украина" class="w-6 h-4 object-cover rounded-sm shadow-sm">
            <img src="https://flagcdn.com/w20/kz.png" alt="Казахстан" class="w-6 h-4 object-cover rounded-sm shadow-sm">
            <img src="https://flagcdn.com/w20/by.png" alt="Беларусь" class="w-6 h-4 object-cover rounded-sm shadow-sm">
            <img src="https://flagcdn.com/w20/uz.png" alt="Узбекистан" class="w-6 h-4 object-cover rounded-sm shadow-sm">
            <img src="https://flagcdn.com/w20/az.png" alt="Азербайджан" class="w-6 h-4 object-cover rounded-sm shadow-sm">
            <img src="https://flagcdn.com/w20/ge.png" alt="Грузия" class="w-6 h-4 object-cover rounded-sm shadow-sm">
            <img src="https://flagcdn.com/w20/am.png" alt="Армения" class="w-6 h-4 object-cover rounded-sm shadow-sm">
          </div>
          <a href="/pages/contact" class="bg-gradient-to-r from-orange-500 to-orange-600 text-white hover:from-orange-600 hover:to-orange-700 w-full py-4 rounded-xl shadow-lg shadow-orange-500/25 text-sm font-medium flex items-center justify-center gap-2">
            Бесплатная консультация
            <i data-lucide="arrow-right" class="w-4 h-4"></i>
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

