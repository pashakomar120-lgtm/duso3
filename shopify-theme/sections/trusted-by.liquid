{% comment %}
  Trusted By Section - Exact copy from React TrustedBySection.jsx
{% endcomment %}

<section class="py-12 overflow-hidden">
  <div class="text-center mb-10">
    <h2 class="text-3xl md:text-4xl font-bold text-white">
      <span class="text-orange-500">{{ 'trusted_by.title_highlight' | t }}</span> {{ 'trusted_by.title' | t }}
    </h2>
  </div>

  <!-- Scrolling logos -->
  <div class="relative">
    <div class="absolute left-0 top-0 bottom-0 w-24 bg-gradient-to-r from-[#0a0a0b] to-transparent z-10 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-24 bg-gradient-to-l from-[#0a0a0b] to-transparent z-10 pointer-events-none"></div>

    <div class="flex gap-12 items-center trusted-scroll-animation">
      {% assign company_names = "TechCorp,Fashion Group,ElectroMart,BeautyPro Inc,SportMax Global,HomeStyle Ltd,GadgetWorld,FoodMarket UA,MegaStore KZ,TrendyRu" | split: "," %}
      {% assign company_logos = "TC,FG,EM,BP,SM,HS,GW,FM,MS,TR" | split: "," %}
      
      {% for j in (1..3) %}
        {% for i in (0..9) %}
          <div class="flex-shrink-0 w-32 h-16 rounded-lg glass flex items-center justify-center hover:bg-white/5 transition-all duration-300 cursor-pointer group">
            <span class="text-gray-500 group-hover:text-white text-lg font-bold transition-colors">
              {{ company_logos[i] }}
            </span>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .trusted-scroll-animation {
    animation: trustedScroll 40s linear infinite;
  }
  
  @keyframes trustedScroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-144px * 10 - 48px * 10));
    }
  }
  
  .trusted-scroll-animation:hover {
    animation-play-state: paused;
  }
</style>

{% schema %}
{
  "name": "Trusted By",
  "settings": []
}
{% endschema %}
