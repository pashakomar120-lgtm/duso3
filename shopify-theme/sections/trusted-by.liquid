<section class="py-12 overflow-hidden">
  <div class="text-center mb-10">
    <h2 class="text-3xl md:text-4xl font-bold text-white"><span class="text-orange-500">Нам доверяют</span> мечтатели, деятели и лидеры</h2>
  </div>
  <div class="relative">
    <div class="absolute left-0 top-0 bottom-0 w-24 bg-gradient-to-r from-[#0a0a0b] to-transparent z-10 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-24 bg-gradient-to-l from-[#0a0a0b] to-transparent z-10 pointer-events-none"></div>
    <div class="flex gap-12 items-center trusted-scroll-animation">
      {% for j in (1..3) %}
        {% for i in (1..10) %}
          <div class="flex-shrink-0 w-32 h-16 rounded-lg glass flex items-center justify-center hover:bg-white/5 transition-all duration-300 cursor-pointer group">
            <span class="text-gray-500 group-hover:text-white text-lg font-bold transition-colors">TC{{ i }}</span>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Trusted By",
  "settings": []
}
{% endschema %}
