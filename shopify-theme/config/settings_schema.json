        "id": "color_primary",
        "label": "Основной цвет",
        "default": "#f97316"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Вторичный цвет",
        "default": "#10b981"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Цвет фона",
        "default": "#0a0a0b"
