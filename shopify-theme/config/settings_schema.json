        "type": "text",
        "id": "social_telegram",
        "label": "Telegram",
        "default": "@duso_ecom"
      },
      {
        "type": "text",
        "id": "social_instagram",
        "label": "Instagram"
      },
      {
        "type": "text",
        "id": "social_facebook",
        "label": "Facebook"
      },
      {
        "type": "text",
        "id": "social_linkedin",
        "label": "LinkedIn"
      }
    ]
