  },
  {
    "name": "Типография",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "inter_n4",
        "label": "Основной шрифт"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "inter_n7",
        "label": "Шрифт заголовков"
      }
    ]
  },
  {
    "name": "Логотип",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Логотип"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 150,
        "unit": "px",
        "label": "Ширина логотипа"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
